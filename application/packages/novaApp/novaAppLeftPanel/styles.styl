overflow-y auto

.activator
    position: absolute

    width 17px
    height 17px

    top: 11px
    left 18px

    border-radius 4px
    overflow: hidden
    transform translate3d(0,0,0)
    border 1px solid #f2f2f2

    transition left 0.2s ease

    .styleBlack &
        border-color #333
        .bar
            border-color #333

    .noLeftPanel &
        left 7px

    &:hover
        cursor: pointer

    .bar
        pointer-events none
        // top 1px
        position: absolute
        display: block
        height 100%
        width 1px
        left 5px
        border-right 1px solid #f2f2f2

.addIcon
    position absolute
    top 11px
    left 48px
    font-size 25px
    line-height 17px
    opacity 0.6
    transition opacity 0.2s ease

    &:hover
        cursor pointer
        opacity 1

.fixedUnits
    position absolute
    top 40px
    left 0
    right 0
    z-index 1

.panelContents, .panelUnits
    position: absolute
    top 0
    left 0
    right 0
    bottom 0
    overflow: hidden
    overflow-y auto
    box-sizing border-box

    transition all 0.2s ease

    .fixed
        position fixed

    .noLeftPanel &
        padding: 0
