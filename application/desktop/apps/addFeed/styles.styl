.appContainer.addFeed
    
    background: #3285b6
    
    .scroll-bottom, .scroll-right
        background: rgba(50,133,182,0.8) !important
        
    .mailRuCommunityAdder
        display: none
        position: absolute
        top 0
        right 0
        height 150px
        left: 181px
        border-bottom 1px solid #e6e6e6
        padding-top 10px
        
        div.text
            margin: 5px auto
            width 450px
            text-align: center
            color #494949
            font-size 12px
            line-height: 16px
            
        .searchInput
            margin: 10px auto
            
            width 350px
            height 23px

            border 1px solid #494949
            border-radius 3px
            
            transition width 0.2s ease
            
            .inputContainer
                position: absolute
                left 0
                top 0
                bottom 0
                right 70px
                border-right 1px solid #494949
                
                input
                    width 100%
                    height 100%
                    
                    padding: 0 8px
                    
                    box-modex border-box
                    
                    font-size 12px
                    line-height 23px
                    
                    color: #494949
                    set-placeholder-style color #999
                    
            .button
                position absolute
                right 0
                bottom 0
                top 0
                width 69px
                
                text-align center
                font-size 12px
                line-height 23px
                
                cursor: pointer
        
    .mailRu 
        .mailRuCommunityAdder
            display: block
            
        .rightContent
            top 151px

    .action
        .input
            width: auto
        input
            width 120px
            line-height 13px
            font-size 12px
            padding: 0 5px
            
            color #fff
            
