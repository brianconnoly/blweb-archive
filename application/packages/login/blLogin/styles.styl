&.modeFrame.compact
    height 280px !important
    margin-top -140px !important
    
.headText 
    display: none
    
    .newSocial &
        display: block

.newSocial &
    .loginBackButton
        margin 0
        margin-left -68px
        
.loginHelpers
    position: absolute;
    left: 50%;
    width: 300px;
    margin-left: -150px;
    background: #fff;
    border-radius: 3px;
    
    z-index 5
    
    .item
        height 40px
        line-height 40px
        padding: 0 10px
        text-align left
        cursor: pointer
        
    .value
        cursor: pointer
        
    .closer
        position: absolute
        right 10px
        top 12px

        background: url(/resources/images/desktop/removeCross.svg) center center no-repeat
        position: absolute
        
        width 16px
        height 16px
        
        cursor: pointer

.passwordContainer
    margin: 0 auto
    margin-top 15px
    
    width 300px
    height 50px
    
    .loginInput
        width 248px
        margin 30px 0
        
    .doLogin
        position: absolute
        top 0
        bottom 0
        right 0
        width 50px
        height 50px
        
        border-radius 2px
        background: rgba(246,246,246,0.5)
        
        cursor: pointer
        transition background 0.1s ease
        
        img
            margin-top 3px
            
        &:hover
            background: rgba(246,246,246,0.3)
            

.registerButton
    margin-top: 30px
    width 100%
    text-align: center
    
    span
        cursor: pointer
        color: #fff
        font-size 30px
        
.forgotPassword
    margin-top: 30px
    width 100%
    text-align: center
    
    span
        cursor: pointer
        color: #fff
        font-size 18px
        
.newPasswordContainer
    display: none
    
    margin: 0 auto
    margin-top 15px
    
    width 300px
    height 50px
    
    background: #f6f6f6
    border-radius 2px
    