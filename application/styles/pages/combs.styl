    $scheduleHeight = 80px
    $scheduleHalfHeight = 40px

    .communityAttach
        width 100%
        height $scheduleHeight
        background rgba(0,0,0,1)
        margin-top 1px

        .marquee
            width 100%

        .resched
            position absolute
            background url(/resources/images/icons/delete-white.png)
            background-size: 100%;
            width 15px
            height 15px
            left 2px
            top 2px
            z-index 50
            cursor pointer

        .avatar
            position absolute
            top 0
            left 0
            width $scheduleHeight
            height $scheduleHeight
            overflow hidden
            background #fff

            .status
                $h = 80px
                position absolute
                width $scheduleHeight
                height $scheduleHeight
                background-size: $scheduleHeight
                transition opacity ease 0.2s
                z-index 10
                sprite "/resources/images/icons/scheduleStatus/status.png" 0 $h $h (5*$h)

                &.pending
                    background-position 0 (-1*$h)
                &.ready
                    background-position 0 (-2*$h)
                &.deleted
                    background-position 0 (-3*$h)
                &.completed
                    background-position 0 (-4*$h)
                &.error
                    background-position 0 0

                &:hover
                    opacity 0

        .info
            size 'abs' 0 $scheduleHalfHeight 0 $scheduleHeight
            color #fff

            .name
                position relative
                overflow hidden
                display inline-block
                box-sizing border-box
                width 100%
                height 20px
                font-size 12px

                .scrollContainer
                    padding-top 8px
                    padding-left 10px

            .date
                position relative
                vertical-align top
                padding-left 10px
                float left

                .datevalue
                    font-size 44px
                    display inline-block
                    vertical-align top
                    float left

                .monthyear
                    font-size 15px
                    float left
                    margin-left 10px
                    line-height 13px
                    padding-top 5px
                    width 32px

                    .dayValue
                        line-height 11px

                    .yearValue
                        font-size 11px

            .time
                height 44px
                font-size 44px
                color #fff
                float left
                width 135px
                text-align center

                .timePicker
                    margin-left 7px
                    
                    span
                        line-height 44px
                        font-size inherit

                    input
                        line-height: 44px
                        font-size 44px
                        height initial
                        width 47px
                        margin -4px 0 0 0
                        padding 0

            .signatures
                size 'abs' auto 5px 0 5px
                height 18px
                line-height 18px
                font-size 14px

                .button
                    float left
                    opacity 0.5
                    padding 0 5px
                    cursor pointer

                    &.checked
                        opacity 1

        .buttons
            size 'abs' 0 0 0 auto
            width $scheduleHalfHeight

            .button
                position absolute
                width $scheduleHalfHeight
                height $scheduleHalfHeight

                &.onSale
                    top 0
                    sprite "/resources/images/icons/comb/post-head.png" right bottom 360px 80px

                    &.active
                        //background #81AB85
                        background-color #ffd700
                        background-position right top

                &.deletionTime
                    top $scheduleHalfHeight
                    background #E85B5B

                    .option p
                        height 100%
                        color #fff
                        font-size 12px
                        line-height $scheduleHalfHeight
                        text-align center

                    .trash
                        size 'full'
                        sprite "/resources/images/icons/trash.png" center center $scheduleHalfHeight $scheduleHalfHeight
                        background-color #000

            &.cannotSale
                .onSale
                    display none

                .deletionTime
                    top 0
                    height 100%

                    .option p
                        line-height $scheduleHeight

        .timeright
            position relative
            display inline-block
            border-radius 100px
            width 66px
            height 66px
            background none
            margin-left 15px
            top 18px
            text-align center

            .switcher
                cursor pointer
                width 100%
                height 100%

                .option
                    padding-top 22px

                    p
                        position relative
                        width auto
                        height 15px
                        font-size 16px
                        color #fff
                        top -6px
                        cursor pointer

                    .trash
                        size full
                        sprite "/resources/images/icons/trash_icon.png" center center 25px 25px
                        //cursor pointer

            .background
                position absolute
                width 54px
                height 54px
                border-radius 100px
                background rgba(255,255,255,0.2)
                left 6px
                top 6px
                text-align center

            .dollar
                size full
                sprite "/resources/images/icons/comb/schedule$.png"



            //span
            //    font-size 18px
            //    line-height 65px
            //    font-weight bold
            //    color #fff
            //    cursor pointer

            .onSale
                position absolute
                top 5px
                right 5px
                width 24px
                height 24px
                background rgba(255, 255, 255, 0.3)
                sprite "/resources/images/icons/comb/schedule$-mini.png"

                &.trash
                    sprite "/resources/images/icons/comb/schedule-trash-mini.png"

        .timerightlocked
            position relative
            display inline-block
            border-radius 100px
            width 33px
            height 33px
            background #e0e3d6
            margin-left 19px
            top 33px

            div
                position absolute
                border-radius 100px
                width 21px
                height 7px
                background #fff
                top 13px
                left 6px

            span
                position absolute
                left -8px
                top -4px
                width 38px
                height 38px
                z-index 10
                font-size 200px
                line-height 0
                opacity 0

        &.repost
            background rgba(0,0,0,0.2)
            .info
                .name
                    .gradient
                        background: linear-gradient(to right, rgba(147,172,173,0) 0%, rgba(147,172,173,1) 100%);

                        .turbo &
                            background: rgb(147,172,173)
            .buttons, .signatures
