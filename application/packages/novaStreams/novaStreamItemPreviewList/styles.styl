.messageTime
    position absolute
    right 10px
    top 20px
    font-size 9px
    color #444

.userMessage
    overflow hidden
    margin-bottom 5px

    .userPicSide
        float left
        width 35px
        min-height 35px

        .novaItem
            width 25px
            height 25px

            position absolute
            top 10px
            right 0px

    .messageSide
        float left
        max-width 70%

        .userName
            font-size 10px
            font-weight 500
            color #444
            margin: 11px 0 0 15px;

        .message
            background #EFEFEF
            padding 5px 10px
            border-radius 5px
            margin: 2px 0 0 11px

            font-size 11px
            line-height 13px
            font-weight 400

            white-space pre-line

