        &.contentType_video
            .play_button
                position absolute
                top 50%
                left 50%
                border-top 25px solid transparent;
                border-bottom 25px solid transparent;
                border-left 35px solid rgba(255, 255, 255, 0.5)
                margin-left -10px
                margin-top -22px
                text-align center
                font-size 19px
                line-height 38px
                cursor pointer
                z-index 20

        &.descripted
            float left

            .itemPreview
                width 75px
                height 75px

            .contentComment
                size 'abs' auto 0 0 0
                height 34px
                padding 5px
                overflow hidden
                box-sizing border-box

                font-size 12px
                line-height: 1.3em

                background rgba(255,255,255,0.7)
                transition all ease 0.2s
                z-index 10

                &:hover
                    height 100%

                    .removeBox
                        opacity 0.9


