pointer-events auto !important

.options
    opacity 0
    position: absolute
    top 0
    bottom 0
    left 0
    width 16px
    background: rgba(255,255,255,0.6)
    transition all 0.2s ease
    cursor: pointer
    
    .corner
        position: absolute
        top 11px
        left 5px
        border-right solid transparent 3px
        border-left solid transparent 3px
        border-bottom 4px solid rgba(0,0,0,0.7)
        pointer-events none
        
&:hover
    .options
        opacity 1