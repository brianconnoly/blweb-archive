margin: 0 auto
margin-top 30px

width 300px
height 50px

background: #f6f6f6
border-radius 2px

input
    width 100%
    height 100%
    
    box-sizing border-box
    padding 5px 10px
    
    font-size 25px
    color: #585757
    
    set-placeholder-style color #b2b2b2
    set-placeholder-style line-height 30px
    
.switcher
    position: absolute
    right 5px
    top 5px
    bottom 5px
    width 40px
    cursor: pointer
    
    img
        margin 12px auto
    
.hiddenPass
    display: block
.visiblePass
    display: none
    
&.passHidden
    .hiddenPass
        display: none
    .visiblePass
        display: block
        