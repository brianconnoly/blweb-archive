                width 185px                

        .proposedItem
            margin-bottom 1px
            
            .userPic
                margin 10px 15px 5px
                width 50px
                height 50px
                border-radius 25px
                overflow: hidden
                
            .user
                padding 0
                    
                .userName
                    text-align: center
                    font-size 11px
                    line-height 12px
            .text
                padding 20px 10px
                font-size 11px
                line-height 12px
                
                div
                    white-space: pre-wrap
                
            .attach
                padding: 11px 0
                
                .attachment
                    width 45px
                    height 45px
                    margin: 2px
                    float: left
                    
                    .removeCross
                        background: url(/resources/images/desktop/removeCross.svg) center center no-repeat
                        position: absolute
                        right 5px
                        top 5px
                        
                        width 16px
                        height 16px
                        
                        cursor: pointer
                        opacity 0
                        transition opacity 0.2s ease

                    &:hover
                        .removeCross
                            opacity 1
                    
                &.attachCount_1 
                    padding: 2
                                    
                    .attachment
