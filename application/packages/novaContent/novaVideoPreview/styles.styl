position: absolute
top 0
bottom 0
left 0
right 0
overflow hidden

img
    pointer-events none

.bottomShield
    position absolute
    bottom 0
    left 0
    right 0
    width 100%
    height 51%
    min-height 25px

    background rgba(0,0,0,0.7)
    color #fff
    opacity 1
    transition opacity 0.2s ease

    .noItemNames &
        opacity 0

    .topLine
        height 33%
        text-align center

        .wrapper
            position absolute
            bottom 0
            width 100%

        .centered
            display inline-block
            // img, span
            //     float left
            img
                vertical-align bottom
                height 1em

    .bottomLine
        margin 0 5%
        height 67%
        width 90%
        display table

    .inner
        display table-cell
        vertical-align middle
        text-align center
        color #fff
        font-size 10px
