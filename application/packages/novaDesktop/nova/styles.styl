.wallpaper
    position: absolute
    top 0
    bottom 0
    left 0
    right 0

.novaDesktop
    position: absolute
    top 0
    bottom 40px
    left 0
    right 0

.progressBar
    position: absolute

    top 0
    right 0
    left 0
    height 2px

    pointer-events none

    z-index 9999

    opacity 0

    transition all 0.2s ease

    .value
        height 100%
        background rgba(255,30,49,0.90) //rgba(0,195,0,0.7)
        transition width 0.2s ease

    &.active
        opacity 1
