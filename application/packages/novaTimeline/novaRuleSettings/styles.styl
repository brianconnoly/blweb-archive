.timePicker
    float left
    margin-right 5px
    input, span
        color #000
        font-size 14px
    input
        width 16px
    span
        margin 0

.timePlaceholder
    width 35px
    text-align center
    font-size 14px
    line-height 24px
    float left
    margin-right 5px

.daysTrigger
    overflow hidden
    float left
    .day
        width 20px
        height 20px
        text-align center
        line-height 20px
        font-size 12px
        text-transform uppercase
        border-radius 5px
        margin 2px
        cursor pointer
        color #999
        transition all 0.2s ease
        float left

        &.active
            color #E6E6E6
            background #A6A6A6
