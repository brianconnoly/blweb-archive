.starcraft
    position: absolute
    display: none
    border 1px solid rgba(242,242,242,0.8)
    background rgba(230,230,230,0.5)
    pointer-events: none

    &.visible
        display: block

.selectableItem
    // outline 0 solid #FCEE21
    box-shadow 0 0 0 0px #FCEE21
    border-radius 3px

    &:hover
        cursor pointer
        .shield, .status
            opacity 0

        .removeBox
            opacity 1

    &.transparent
        opacity 0.2

    &.selected
        // outline 4px solid #FCEE21
        box-shadow 0 0 0 4px #FCEE21
        
        & > div
            opacity 0.7

        & .shield
            opacity 0
        & .status
            display none

        .timeline &
            z-index 999 !important