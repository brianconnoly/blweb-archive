div.novaFrameTopBarLayout
    div.novaFrameTopBar
        div.addTask(ng-click="addTask()", ng-class="{'active':addTaskActive}") +
        div.showAccepted(ng-class="{'active':showAccepted}", ng-click="showAccepted = !showAccepted") Kryzh
        div.novaTasksCompactSwitch(ng-class="{'active':compact}", ng-click="triggerCompact()")
            div.subLines
        div.novaTaskFilterInput
            input(ng-model="taskFilterString", translate="", translate-placeholder="'novaTasks_filter_placeholder_subtasks'")
    
    div.novaFrameContents.novaMultiselect
        div.novaItemScope.novaItem.novaTaskEdit.novaItemDroppable.novaItemMenu.editOpenedTask(nova-item-id="flowFrame.item.id", nova-item-type="task")

        div.subTasks.novaMultiselect(ng-class="{'novaTasksCompact':compact}")
            div.subTask.novaItem.novaItemPreview.novaItemDraggable.novaItemDroppable.novaItemSelectable.novaItemMenu(
                ng-repeat="item in childTasks | filter:taskFilter | orderBy:taskService.taskOrder:true",
                nova-item-preview-type="list",
                nova-item-context="project"
                )
    
    div.novaItem.novaTaskEdit.novaItemDroppable.createSubtask(
        nova-task-create,
        nova-item-object="newTask",
        ng-if="addTaskActive")
