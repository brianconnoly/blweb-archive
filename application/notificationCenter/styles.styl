.systemMessages
    .message
        transform scale(1)
        transition transform 0.2s ease

        &:active
            transform scale(0.9)

.notificationItem
    height 80px
    position: relative

    overflow: hidden

    background: rgba(255,255,255,0)

    transition background 0.2s ease

    .notificationFader &:hover
        background: rgba(255,255,255,1)

    &.big
        .notificationPreview
            right 0

    .systemMessages &
        .notificationPreview
            right 0px

    .markRead
        position: absolute
        right 15px
        top 50%
        
        line-height: 20px
        height 20px

        margin-top -10px

        cursor: pointer
        
        
.notificationItem
    overflow: hidden
    
    .date
        position: absolute;
        right: 89px;
        top: 9px;
        line-height: 10px;
        font-size 10px
        color: #999
        
    .text
        float: left
        // padding: 15px 0 5px
        width 190px
        margin-top: 21px;
        font-size: 12px;
        
        .header
            font-size: 16px;
            line-height: 16px
            margin-bottom: 1px;
            
        .description
            font-size: 12px;
            line-height: 14px;
            
    .preview
        float left
        
        height 80px
        width 80px

        margin-right 5px
        
        img
            margin 10px
        
.notificationButtons
    position: absolute

    right 10px
    top 10px
    bottom 10px
    width 60px
    
    border-left 1px solid #9d9c9c
    z-index 10
    
    .notificationButton        
        display: table
        padding-left: 10px
        cursor: pointer
        font-size 12px
        line-height: 12px
        
        height 50%
        // width 60px
        width 53px
        
        top: -1px
        border-bottom: 1px solid #9d9c9c
        
        &:last-child
            border-bottom none
        
        &.single
            height 100%
            
        .buttonText
            display: table-cell
            vertical-align middle
            cursor: pointer
            text-transform lowercase

.notificationPreview
    position: absolute
    top 0
    bottom 0
    left 0
    right 0px
    
    & > *
        position initial
        
    & > div
        size "full"

    .big &
        .previews
            width 100px
            height 100px
            margin-right: 15px

            &.previewsCount2 > .itemPreview
                    margin-right: -50px

            &.previewsCount3 > .itemPreview
                    margin-right: -67px

            & > .itemPreview
                width 100px
                height 100px
                margin-right: -75px

        .action
            right 5px

    
    .previews
        float: left
        height 80px
        width: 80px
        overflow hidden
        margin-right 10px

        &.previewsCount2 > .itemPreview
                margin-right: -40px

        &.previewsCount3 > .itemPreview
                margin-right: -54px

        & > .itemPreview
            display: block
            width 80px
            height 80px

            float: left
            margin-right: -60px;
            position: relative;

    .action
        position: absolute
        right 0px
        bottom 5px

        font-size 13px

        text-decoration: underline

        cursor: pointer

.notificationFader
    position: absolute
    top 0
    bottom 0
    right 0
    left 0

    background: rgba(0,0,0,0.2) !important

    z-index 999999

    // display: none

    // &.active
    //     display: block

    .panel
        position: absolute
        right 20px
        bottom 60px

        width 360px
        max-height 560px

        overflow-y: auto
        
        border-radius 10px
        background: #F5F5F5 //rgba(255,255,255,0.98)
        padding 15px 20px

        .nothingToShow
            height 60px
            width 100%

            line-height 60px

            text-align: center
            font-size 22px

            color: #888

        .notificationsContainer
            max-height: 560px;
            overflow-y: auto;
            
        .notificationPreview
            border-bottom 1px solid #ECECEC
            
        .options
            padding-top: 20px;
            padding-bottom: 5px;
            overflow: hidden;

    .showAll
        
        position: fixed
        bottom 0
        left 0
        right 0

        width 100%
        height 50px

        box-sizing: border-box
        padding-right: 0

        background: #ddd

        line-height: 50px
        text-align: center

        font-size 24px

        cursor: pointer

        span
            cursor: pointer

        &.hasUnread
            padding-right: 80px

            .hideAll
                display: block

        .hideAll
            display: none
            cursor: pointer

            position: absolute
            line-height: 50px
            
            right 20px
            top 0

            font-size 12px