position absolute
top 0
left 0
bottom 0
right 0

.novaPostCreateSimple
    position absolute
    top 50px
    left 0
    right 0
    height auto
    z-index 2
    box-shadow 0 4px 4px -2px rgba(0,0,0,0.4)

.novaFrameTopBar
    height 70px

    .showProposed
        position absolute
        right 0
        bottom 0

    .createPost
        border 1px solid #ccc
        line-height 22px
        color #808080
        float left
        border-radius 5px
        margin 13px
        font-size 11px
        padding 0 9px
        cursor pointer

        transition all 0.2s ease

        &.active
            background #ccc
            color #fff

.novaFrameContents
    overflow-y auto !important
    top 70px
