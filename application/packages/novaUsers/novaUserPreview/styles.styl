.avatarWrapper
    width 60px
    height 60px
    border-radius 40px
    padding 2px
    background #fff
    box-shadow 0 2px 10px -2px rgba(0,0,0,0.3)

    .userPic
        border-radius 50px
        position absolute
        top 3px
        bottom 3px
        left 3px
        right 3px
        box-sizing border-box
        overflow hidden
        transform translate3d(0,0,0)
        pointer-events none

    .overlay
        position absolute
        pointer-events none
        top 0
        bottom 0
        left 0
        right 0
        border-radius 50px

.userName
    margin-top 10px
    text-align center
    font-size 12px
    width 64px
