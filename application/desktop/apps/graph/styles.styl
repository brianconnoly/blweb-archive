.appContainer.graph
    background: #fff
    
    .title span.month
        text-transform capitalize
    
    .uniGraph
        position: absolute
        top 0
        bottom 0
        left 0
        right 0
        
        .typeSwitch
            margin-top: 20px
            width 100%
            text-align: center
            
            .button
                display: inline-block
                margin: 0 5px
                cursor: pointer
                padding: 1px 8px 4px 8px
                font-size 13px
                
                &.active
                    cursor: default
                    background: #454545
                    color: #fff
                    
        .graphDescription
            text-align: center
            font-size 14px
            line-height 16px
            color: #ACACAC
            margin-top 10px
                
        .graphContainer
            position: absolute
            top 90px
            left 30px
            right 30px
            bottom 70px
            
            &:hover
                .hoverBar
                    opacity 1
            
            .hoverBar
                position: absolute
                top 10px
                bottom 40px
                width: 50px
                margin-left 40px
                
                background: rgba(200,200,200,0.15)
                opacity 0
                transition opacity 0.2s ease
                
            
            .fullSize
                position: absolute
                top 0
                left 0
                right 0
                bottom 0
                // width 100%
                // height 100%
                    
            .helper
                position: absolute
                
                background: #efefef
                box-shadow 0px 0px 2px 0px #454545
                
                pointer-events none
                opacity 0
                
                transition all 0.2s ease
                
                padding: 4px
                border-radius 5px
                
                text-align: right
                
                &.visible
                    opacity 1
                
                .points
                    font-weight: bolder  
                    font-size 13px
                    line-height: 16px
                    margin 0 0 3px 0
                    
                .time
                    font-size 10px                    
                    
                .icon
                    width 16px
                    height 16px
                    display: inline-block
                    vertical-align: middle
                    
                    top -2px
                    
                    margin-right 2px
                    
                    &.likes
                        background: url(/resources/images/desktop/stats/likes.svg) center center no-repeat

                    &.reposts
                        background: url(/resources/images/desktop/stats/reposts.svg) center center no-repeat

                    &.comments
                        background: url(/resources/images/desktop/stats/comments.svg) center center no-repeat
                            
                    &.commLikes
                        background: url(/resources/images/desktop/stats/commentsLikes.svg) center center no-repeat  
                        
                    &.activity
                        top -5px
                        
                        &:after
                            content: "⦿"
                            font-size: 20px
                
            .dots
                position: absolute
                top 0
                left 0
                
                .dot
                    position: absolute
                    
                    width 4px
                    height 4px
                    
                    margin-top: -5px
                    margin-left: -5px

                    border-radius 5px
                    border 3px solid
                    
                    background: #fff

                    transition all 0.2s ease
                    cursor: pointer
                    
                    &:hover 
                        transform scale(1.6)
        
        .legend
            position: absolute
            bottom 35px
            left 0
            right 0
            height 30px
            
            text-align: center
            
            .line
                display: inline-block
                margin: 0 8px
                cursor: pointer
                
                *
                    cursor: pointer
                    
                .number
                    font-size 14px
                
                .icon
                    width 16px
                    height 16px
                    display: inline-block
                    vertical-align: middle
                    
                    top -2px
                    
                    margin-right 5px
                    
                    &.likes
                        background: url(/resources/images/desktop/stats/likes.svg) center center no-repeat

                    &.reposts
                        background: url(/resources/images/desktop/stats/reposts.svg) center center no-repeat

                    &.comments
                        background: url(/resources/images/desktop/stats/comments.svg) center center no-repeat
                            
                    &.commLikes
                        background: url(/resources/images/desktop/stats/commentsLikes.svg) center center no-repeat
                    
                    &.activity
                        top -5px
                        
                        &:after
                            content: "⦿"
                            font-size: 20px
                        
                .color
                    position: absolute
                    left 2px
                    right 0
                    bottom -4px
                    height 2px
        
        .overallSwitch
            position: absolute
            bottom 0
            left 0
            right 0
            height 35px
            text-align: center
            
            .button
                font-size 12px
                cursor: pointer
                display: inline-block  
                

#graphHelper
    position: absolute
    z-index 9999
    pointer-events none
    
    width 800px
    margin-left: -400px
    text-align: center
    
    opacity 0
    transition all 0.2s ease
    
    &.visible
        opacity 1
        
    .plate
        display: inline-block
        
        background: rgba(0,0,0,0.8)
        color: #fff

        border-radius 4px
        padding 5px 8px
        
        line-height: 16px;
        font-size: 14px;
        
    .corner
        position: absolute

        left 50%
        bottom -5px
        margin-left -5px
        
        border-left solid 5px transparent
        border-right solid 5px transparent
        border-top solid 6px rgba(0,0,0,0.8)
        
                    