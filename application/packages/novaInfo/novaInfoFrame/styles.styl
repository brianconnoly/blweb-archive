.itemName
    width 100%
    box-sizing border-box
    padding 3px 10px

    outline none

    font-weight bolder
    font-size 16px

    margin-top: 4px;
    line-height: 20px;

    &.placeholder
        color #999

.detailedItemPreview
    margin 10px
    height 240px

    &.big
        min-height 400px

.itemDetails
    margin 20px

    .detailLine
        height 26px
        line-height 26px
        font-size 14px
        border-bottom 1px solid rgba(0,0,0,0.03)
        overflow hidden

        &:last-child
            border-bottom none

        .caption
            float left
            width 50%
        .value
            float left
            width 50%
            text-align right
