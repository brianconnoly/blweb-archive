display table

.cover
    width 48px
    height 36px
    float left
    border 2px solid rgba(255,255,255,0.6)
    border-radius 5px
    overflow hidden
    transform translate3d(0,0,0)

.name
    display table-cell
    vertical-align middle
    max-height 36px
    overflow hidden
    padding 2px 8px
    line-height 14px
