position absolute

opacity 0
transition opacity 0.2s ease

pointer-events none

padding: 5px 0;

background: #fefefe;
border-radius 5px
// box-shadow 0 0 10px 0 rgba(77,77,77,0.9)
vendor filter, drop-shadow(0 0 10px rgba(77,77,77,0.9))

// overflow-y: auto

min-width 210px
z-index 10000

&.corner:after
    content: "";
    border-left: 10px solid transparent;
    position: absolute;
    top: -10px;
    border-right: 10px solid transparent;
    border-bottom: 10px solid #fefefe;

&.cornerDown:after
    top auto
    bottom: -10px;
    border-top: 10px solid #fefefe;
    border-bottom none

&.noLeftCorner
    border-radius 5px 5px 5px 0

&.active
    pointer-events auto
    opacity 1

.menuSections
    overflow-y auto

.menuSection
    margin-bottom: 5px
    padding-bottom: 5px

    border-bottom 1px solid #ccc

    &:last-child
        margin-bottom: 0
        padding-bottom: 0

        border-bottom none

    .menuItem
        padding: 3px 22px
        height 18px

        line-height 18px
        font-size 14px

        cursor: pointer
        overflow: hidden

        span
            cursor: pointer

        .check
            cursor: pointer
            position: absolute
            left 2px
            top 3px

            width 12px
            height 9px

            margin-top: 4px
            margin-left: 3px

            background: url(/resources/images/desktop/check-black.svg)

        &.disabled
            color #ccc
            cursor: default

            span
                cursor: default

            &:hover
                color #ccc
                background: none

        &:hover
            color #fff
            background: #3496F2

            .check
                background: url(/resources/images/desktop/check.svg)
