position absolute
height 40px
bottom -50px
left 0px
right 0

padding 5px 10px

background: linear-gradient( to bottom, rgba(0,2,11,0) 0%, rgba(0,2,11,0.7) 100%)
transition all 0.2s ease

z-index 1000
opacity 0

&.visible
    bottom 0
    opacity 1

.maximized &
    background: rgba(0,0,0,0.5)
    padding 0

    .appSession
        margin: 8px 3px

&:hover
    .separator
        border-right solid 2px rgba(255,255,255,0.4)
    .appSession
        border solid 2px rgba(255,255,255,0.5)

.systemMenu
    float left
    width 20px
    height 20px
    margin 10px
    cursor pointer
    margin-right 5px

    img
        cursor pointer
        height 20px

.separator
    float: left
    border-right solid 2px rgba(255,255,255,0.2)
    height 20px
    margin: 10px 10px
    pointer-events none
    transition all 0.2s ease

.appSession
    overflow hidden
    border-radius 5px
    transform translate3D(0,0,0)
    float: left

    height 24px
    width 30px

    margin 8px 5px // 3px

    background: rgba(255,255,255,0.2)
    box-sizing border-box

    border solid 2px rgba(255,255,255,0.3)
    transition all 0.2s ease

    cursor pointer

    &.launched
        height 30px
        width 40px
        margin 5px

    .itemPreview
        pointer-events none

    &.static
        height 34px
        width 50px

        margin: 3px 4px

    &.active, &:hover
        // box-shadow 0 0 0 3px #FCEE21 inset
        border solid 2px #FCEE21
        cursor default !important

    &:hover
        cursor: pointer

    &:active
        transform scale(0.9)

.appsContainer

    .appsWrapper
        white-space: nowrap;

        .appSession
            display: inline-block
            position: relative
            opacity 0
            transform scale(0.8)
            left -20px
            transition all 0.2s ease

            &.created
                left 0
                transform scale(1)
                opacity 1

.rightSide
    float: right

    .rightSideItem
        float: left
