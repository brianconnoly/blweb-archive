<div class="pocketSwitcher"><div ng-mouseenter="hoverPocket(pocket)" ng-repeat="pocket in buffer.buffer" ng-class="{'active':pocket==buffer.currentPocket}" ng-style="{'width':pocket.width}" ng-click="switchPocket(pocket)" class="typeSwitcher switcherStyle_{{$index}}"> <span ng-click="closeBuffer(pocket, $event)" class="closePocket"></span></div><div dropable-item="{type:'newPocket'}" ng-click="addBuffer()" ng-if="buffer.buffer.length &lt; 5" class="addBuffer droppableItem"></div></div><div antiscroll="antiscroll" ng-class="{'zoom_min':buffer.size == 'mini', 'zoom_max':buffer.size == 'full'}" class="pocket itemsContainer multiselect bufferSize_{{buffer.size}}"><div context="buffer.currentPocket" ng-repeat="item in buffer.currentPocket.items | reverse" class="item pocketItem previewContainer selectableItem droppableItem contextMenu editableItem"><div item="item" overlay="rightPanel" class="itemPreview"></div><div ng-click="removeElement(item, $event)" class="removeElement flushMousedown"></div></div></div>