// Preview
.requestPreview
.lotPreview
    display inline-block
    background #272727
    color #fff
    position relative
    margin 10px

    .innerPreview
        overflow hidden

        &.lotPostPreview
            width 300px
            height 150px

        &.warn
            background: rgba(222, 47, 47, 0.9) !important

        .cancel
            position: absolute;
            font-size: 20px;
            font-weight: bold;
            top: 80px;
            width: 100%;
            text-align: center;
            text-shadow: black 1px 1px 2px;
            z-index 100500
            cursor pointer

    .previewContainer
        // width 150px
        // height 150px
        float left

        //.requestStatus
        //    display none

    .detailsContainer
        text-align left
        float left

        width 150px
        height 150px
        padding 10px 0 0 8px
        box-sizing border-box

        div.makeFavourite
            position: absolute
            top 5px
            right 5px

            font-size 24px
            color #ccc
            cursor: pointer

            &.active
                color #fccb2b
                &:hover
                    opacity 1

            &:hover
                color #f9df9d
                opacity 0.7

        h3.title
            width 105px
            font-size 14px
            overflow hidden
            white-space nowrap
            margin-bottom 10px
            font-weight bolder

        .detail
            font-size 11px
            line-height 12px
            padding 3px 0 0 26px
            margin-bottom 5px
            width 100%
            display inline-block
            box-sizing border-box

            *
                font-weight bolder

            .title
                float left
                width 100px
                min-height 12px

            .value
                display inline-block
                .word, .time
                    float left
                .word
                    width 20px

            &.image_author
                sprite "/resources/images/icons/market/lot_author.png" 0px 0px 16px 16px

            &.image_date
                sprite "/resources/images/icons/market/lot_date.png" 0px 0px 16px 16px

            &.image_users
                sprite "/resources/images/icons/market/lot_users.png" 0px 0px 16px 16px

        .schedule
            margin-top 23px

            .icon
                float left
                width 50px
                height 50px
                background #eee

            .info
                float left
                width 210px
                height 50px
                margin 0 10px
                background #eee

                .title
                    font-size 14px
                    line-height 25px
                    white-space nowrap
                    overflow hidden
                .date
                    font-size 20px

        .cancel
            margin-top 12px
            font-size 16px
            display inline-block
            cursor pointer


        .requestStatus
            width 75px
            height 75px
            top initial
            left initial
            right 0
            bottom 0

            //.icon, .corner
            //    left 0
            //    top 0

.lotPreview
    .previewContainer
        .requestStatus
            display none

.requestPreview
    .previewContainer
        .requestStatus
            transform scale(0.6)
            transform-origin right bottom

