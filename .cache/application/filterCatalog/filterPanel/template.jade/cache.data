<div antiscroll="antiscroll" class="filterBody"><ul class="sections"><li class="section title">Группировка</li><li ng-repeat="section in sections" ng-class="{'active':current==section}" class="section"> <div ng-click="select(section)" class="sectionTitle menuButton">{{localization.translate('filter_group_type_'+section.title)}}</div><ul ng-show="current==section &amp;&amp; section.showChildren == true" class="sectionChildrenList"><li ng-repeat="child in children" ng-click="select(section, child)" ng-class="{'active':currentChild==child}" class="sectionChildren">{{localization.translate(child.title)}}</li></ul></li></ul><ul ng-show="sortTypes.length &gt; 0" class="sections"><li class="section title">Сортировка</li><li><combobox list="sortTypes" ng-model="params.currentSort" ng-change="onChange()" default="last"></combobox></li><li ng-show="filterMessage" class="section warning">{{localization.translate(filterMessage)}}</li><li class="section title">Дополнительно</li><li ng-class="{'active': params.sortOrder}" class="section menuButton"><div class="label">Инверсия</div><checkbox ng-model="params.sortOrder" class="long"></checkbox></li><li ng-repeat="param in extra" ng-class="{'active': params[param.param]}" class="section menuButton"><div class="label">{{localization.translate('filter_settings_' + param.title)}}</div><checkbox ng-model="params[param.param]" class="long"></checkbox></li></ul></div>