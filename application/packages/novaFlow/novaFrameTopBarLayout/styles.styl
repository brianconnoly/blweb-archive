.novaFrameTopBar
    position: absolute
    top 0
    height 30px
    left 0
    right 0
    background: rgba(255,255,255,0.6)

    .textLink
        float left
        font-size 11px
        cursor pointer
        margin 5px 10px

        &:hover
            cursor pointer

.novaFrameContents
    position: absolute
    top 30px
    left 0
    right 0
    bottom 0
    overflow: hidden

    box-shadow 0 5px 5px -5px rgba(0,0,0,0.2) inset
