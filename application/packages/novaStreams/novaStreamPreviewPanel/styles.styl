overflow hidden
margin 5px

.streamCover
    width 50px
    height 50px
    padding 2px
    box-shadow 0 2px 3px -2px rgba(0,0,0,0.3)
    border-radius 50px
    background #fff

    float left

    img
        width 50px
        height 50px

        border-radius 50px

.streamTitle
    display table
    height 54px
    margin-left 10px
    float left
    max-width 130px

    .titleText
        display table-cell
        vertical-align middle

.updatesIndicator
    float right
    
