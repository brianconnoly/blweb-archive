.appSettingsLayout
    
    &.appSettingsLayout_showed
        .appSettingsLayout_topBar
            top 0px !important
            
        .appSettingsLayout_body
            top 40 !important
            
        .appSettingsLayout_settings
            top -200px !important
            // transform translate3d(0,-200px,0) !important
    
    &.showSettings
        
        .appSettingsLayout_settings
            top 40px !important
            // transform translate3d(0,40px,0)
        
        .appSettingsLayout_body
            top 280px !important
            
        .appSettingsLayout_activator
            transform rotateZ(-180deg) !important
            
    .appSettingsLayout_topBar
        position: absolute
        overflow: hidden
        top -40px
        left 0
        right 0
        height 40px
        z-index 10
        line-height 40px
        background: #E6E6E6
        
        transition top 0.5s ease
        z-index 100
        
        transform translate3d(0,0,0)
        
        .title
            font-size 16px
            margin-left 20px
            
            text-overflow: ellipsis
            overflow: hidden
            white-space nowrap 
            
            input
                width 100%
                height 100%
                
                padding: 0
                
                box-sizing border-box
        
        .params
            position: absolute
            right 0
            top 0
            bottom 0
            z-index 10
            
            .settings
                width 15px
                height 15px
                margin 12px
                margin-right 12px
                float: right
                cursor: pointer
                
            .gearIcon
                transform rotateZ(0)
                transition transform 0.5s ease
                background: url(/resources/images/desktop/actions/black/header-button-settings.svg) center center no-repeat
                
    .appSettingsLayout_settings
        overflow hidden
        position: absolute
        left 0
        right 0
        height 240px
        background: #F2F2F2
        
        top -240px
        transition top 0.5s ease
        
        transform translate3d(0,0,0)
        
        // transform translate3d(0,-240px,0)
        
    .appSettingsLayout_body
        position absolute
        bottom 0px
        left 0
        right 0
        
        top 0px
        transition top 0.5s ease
        
        transform translate3d(0,0,0)
        



