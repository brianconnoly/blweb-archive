.processBar
    position: absolute
    height 2px
    left 0
    width 10%
    bottom 0
    z-index 50
    
    pointer-events none
    
    opacity 0
    transition opacity 0.2s ease, width 0.2s ease
    
    background: rgba(57,181,74,0.97) // #c1272d

    &.red
        background: #c1272d
    
    &.animated
        transition opacity 0.2s ease, width 2s ease
        
    &.showed
        opacity 1
        
    &.full
        transition width 0.2s ease
        width 100%