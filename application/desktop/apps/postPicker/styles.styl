.appContainer.postPicker
    
    background: #3285B6
    
    .scroll-bottom, .scroll-right
        background: rgba(50,133,182,0.8) !important
        
    .body
        background: #F2F2F2
    
    div.postShelf
        
        position: absolute
        
        top 80px
        left 0
        right 0
        bottom 0
        
        text-align: center
        
        overflow-y: auto
        
        .shelfTitle
            text-align left
            margin 5px 20px 2px

        div.itemSquare
            display: inline-block

            position relative

            // float left

            height 50px
            width 70px

            margin 2px

            div.unFavourite
                position: absolute

                top 5px
                right 5px

                color: #FFFF00
                cursor pointer

                z-index: 650

        div.shelf
            overflow hidden
            float none
            padding 10px 20px
            
    .upperBlocks
        
        .pickerItem
            box-sizing border-box
            border 1px solid #494949
            color #494949
            text-align center
            
            font-size 11px
            line-height 10px
            
            border-radius 3px

            padding: 13px 10px


    div.scheduleInformation
        overflow hidden
        height 80px
        
        position: absolute
        top 0px
        left 0
        right 0
        
        margin: 10px 20px
        
        .communityPic
            float: left
            width 60px
            height 60px
            margin-right 10px
            
        .info
            position: absolute
            top 0
            right 0
            bottom 0
            left 72px
            
            .communityName
                font-size 15px
                height 20px
                line-height 20px
                
                text-overflow ellipsis
                overflow: hidden
                white-space nowrap
                
                color #494949

        div.timeInfo
            margin-top -3px

            div.timePicker
                float left
                margin-right 15px
                height 42px
                
                input
                    width 46px
                    height 46px
                    font-size 42px
                    line-height 46px
                    color #494949
                    
                span
                    margin: 0
                    font-size 42px
                    color #494949

            div.datePicker
                background none //rgba(0,0,0,0)
                color #494949

                font-size 12px
                line-height: 10px
                margin-top 12px

                float left

    div.pickerItem

        cursor pointer

        width 70px
        height 50px
        display block

        background: rgba(255,255,255,0.5)

        cursor: pointer
        position: relative

        transition all 0.1s ease-in-out

        margin 0 auto

        & *
            cursor pointer

        // &:hover
        //     transform scale(1.1)

        &.combPost
            img
                width 150px

