width 200px
height 220px
float left
margin 5px
border-radius 5px
border 1px solid #f2f2f2
overflow hidden

.paintHeader
    position absolute
    top 0
    left 0
    right 0
    height 20px
    background #f2f2f2
    box-shadow 0 0 3px 0 rgba(0,0,0,0.6)

    .title
        float left
        line-height 20px
        font-size 14px
        padding 0 5px

    .power
        float right
        height 14px
        width 28px
        margin 2px

        .tumbler
            right 13px

        .button
            height 14px
            width 14px

    .menuActivator
        float right
        width 16px
        height 16px
        background #A8A8A8
        border-radius 10px
        color #fff
        font-weight bold
        line-height 9px
        text-align center
        margin 2px

.paintBody
    position absolute
    top 20px
    left 0
    right 0
    bottom 0
    overflow-y auto

    .item
        padding 5px 10px
        font-size 12px
