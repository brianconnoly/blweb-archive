@keyframes enter
    from
        opacity 0
        transform scale(0)
        left -70px
    75%
        left 15px
    to
        opacity 1
        transform scale(1)
        left 0px

@keyframes leave
    to
        opacity 0
        transform scale(1)
        left -70px
    25%
        left 15px
    from
        opacity 1
        transform scale(0)
        left 0px

