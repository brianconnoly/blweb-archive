<div class="dragHandler topBar noMaximize noSettings black flushMousedown"><process-bar></process-bar><div class="appControls"></div><div translate="'inviteUserApp_title'" class="title"></div></div><div class="body"><div translate="'inviteUserApp_introText'" class="introText"></div><div class="inputContainer"><input ng-model="searchField" ng-change="searchUsers()" ng-model-options="{ updateOn: 'default blur', debounce: {'default': 500, 'blur': 0} }" class="inviteFocus"/></div><div ng-if="!searchUser" translate="'inviteUserApp_searchBottomText'" class="searchBottomText"></div><div ng-if="searchUser" translate="'inviteUserApp_rolesText'" class="searchBottomText"></div><div translate="'inviteUserApp_rolePickerText'" class="rolePickerText"></div><div ng-if="searchUser" class="rolePicker"><div class="userPic"><img src="{{searchUser.photo}}" class="picPreload"/></div><div class="userDetails"><div class="userName">{{searchUser.name}}</div><combobox list="roles" ng-model="params.userRole"></combobox></div></div><div ng-if="searchUser" class="roleDescription">{{translate('inviteUserApp_roleDescription_' + params.userRole)}}</div><ul ng-if="searchUser" class="options"><li translate="'inviteUserApp_doInvite'" ng-click="doInvite()" class="hoverActive option"></li><li translate="'inviteUserApp_cancel'" ng-click="closeApp()" class="hoverActive option cancel"></li></ul><div ng-if="canAddNew" translate="'inviteUserApp_inviteNewUser'" ng-click="switchInviteNew()" class="inviteNewUser"></div></div>