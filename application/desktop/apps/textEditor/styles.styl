.appContainer.textEditor
    background: #fff
    
    .topBar
        input.title
            set-placeholder-style color #ccc

    .body
        box-shadow none
        
    .text
        position: absolute

        top 20px
        left 45px
        right 50px
        bottom 60px
        
        textarea
            border none
            box-sizing border-box
            width 100%
            height 100%
            // padding 0 45px 0 50px
            
            font-size 12px
            color: #000
            
            resize: none

    .counter
        font-size 10px
        color: #b3b3b3
        
        position: absolute
        
        bottom 0
        left 0
        right 0
        
        line-height 60px
        height 60px
        text-align: center