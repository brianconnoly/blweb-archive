<div class="multiselect stepView"><div ng-if="!currentStep.flow &amp;&amp; !currentStep.group &amp;&amp; currentStep.type == 'folder'" class="folderView itemsContainer"><div id="{{id}}" type="content" context="folder" ng-repeat="id in folder.contentIds | filter:itemFilter | orderBy:itemSort:true" class="previewContainer selectableItem contextMenu droppableItem editableItem"><div id="id" type="content" class="itemPreview"></div></div></div><div ng-if="!currentStep.flow &amp;&amp; !currentStep.group &amp;&amp; currentStep.type != 'folder'" class="singleView itemsContainer"><div ng-repeat="item in items" class="previewContainer selectableItem contextMenu droppableItem editableItem"><div item="item" overlay="blView" class="itemPreview"></div></div></div><div ng-if="currentStep.group" class="groupedView"><div ng-repeat="group in groups" ng-show="screens.length &gt; 0" class="groupView"><div ng-if="group.communityId" community-id="group.communityId" ng-click="goSection(group)" class="title communityTitle"></div><div ng-if="!group.communityId" class="title"><div ng-if="group.groupPic" class="groupIcon"><div id="group.groupPic" type="content" class="itemPreview"></div></div><div ng-if="group.translateTitle" translate="group.translateTitle" ng-click="goSection(group)" class="text"></div><div ng-if="!group.translateTitle" ng-click="goSection(group)" class="text">{{group.title}}</div></div><div ng-if="notLast()" ng-click="goRight()" class="activeBar goRight"></div><div ng-if="notFirst()" ng-click="goLeft()" class="activeBar goLeft"></div><div class="screens"><div ng-repeat="screen in screens" ng-style="{'width':screenWid}" class="itemsContainer screen"><div ng-repeat="item in screen" class="previewContainer selectableItem contextMenu droppableItem editableItem"><div item="item" overlay="blView" class="itemPreview"></div></div></div></div><div ng-if="screens.length &gt; 1" class="paginator paginatorCircle"><div ng-repeat="screen in screens" ng-class="{'active':screen == currentScreen}" ng-click="selectScreen(screen)" class="page"></div></div></div></div><div ng-if="currentStep.flow" class="flowView"><div ng-repeat="period in periods" ng-if="period.items.length &gt; 0" after-render="checkToLoad()" class="periodBlock"><div translate="period.title" class="periodHead"></div><div class="itemsContainer"><div context="getContext()" ng-repeat="item in period.items | filter:itemsFilter | orderBy:currentStep.sortBy:true" class="previewContainer selectableItem contextMenu droppableItem editableItem"><div item="item" overlay="blView" class="itemPreview"></div></div></div></div></div></div>