// OVERLAY
.overlays
    display none
    position fixed
    top 0
    bottom 0
    left 0
    right 0

    &.withTop
        top 44px

    &.active
        display block

    .overlay
        position absolute
        top 0
        bottom 0
        left 0
        right 0

        .close
            position absolute
            top 0px
            left 0px
            width 80px
            height 80px

            cursor pointer
            sprite "/resources/images/icons/closers/big-white.png"

        .center
            position relative
            width 480px
            height 100%
            margin auto
            overflow hidden



