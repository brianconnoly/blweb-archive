position: absolute
top 0
bottom 0
left 0
right 0

.screen
    overflow hidden
    position: absolute
    width 100%
    height 100%

    transform scale(0.9)
    opacity 0.01
    transition all 0.2s ease

    background: #aaa

    &.loginContainer
        right 0
        left: auto

    &.desktopContainer
        left 0
        right auto

    &.visible
        opacity 1
        transition all 0.6s ease

    &.active
        transform scale(1)
        transition all 0.6s ease

    &.right
        left: 100%
        right: auto
        transition all 0.6s ease

    &.left
        right 100%
        left: auto
        transition all 0.6s ease

    &.noAnim
        transition transform 0.2s ease

.disconnectLayer
    position: absolute
    top 0
    bottom 0
    left 0
    right 0

    opacity 0
    background: rgba(0,0,0,0.6)
    color: #fff

    pointer-events none

&.disconnected
    .disconnectLayer
        opacity 1
        pointer-events auto

    .screen
        transform scale(0.9)
        vendor filter, blur(5px) grayscale(1)
