.globalOffer,
.paymentInfo .piWindowWrapper .scrollLayer .page.offer
    size 'full'

    //.centerTitle
    //    margin 30px 0

    .centerTitle
        text-align center
        font-size 40px

    .mainBlock
        //size 'abs' 75px 10% 0 10%
        size 'abs' 20px 20px 0 20px

        .text
            overflow auto
            size 'abs' 0 0 50px 0
            text-align left
            line-height 19px

            b
                font-weight bolder
            h2
                font-size 22px
                line-height normal
                text-align center
                padding 0 10px
            h3
                font-size 20px
                line-height normal
                text-align center
                padding 0 7px
            h4
                font-size 18px
                line-height normal
                padding 0 4px
            .p
                padding 4px 0 0 9px
            a
                color #777
            *
                user-select text




        .agree
            position absolute
            bottom 0
            width 100%
            height 50px
            text-align left

            box-sizing border-box
            padding-top 12px

            .title
                line-height 26px
                //height 24px
                float left

            .bl-checkbox
                border-radius 0
                border 1px solid darkgray
                width 24px
                height 24px
                margin-right 10px
                float left

                .tumbler
                    sprite "/resources/images/icons/paymentinfo/offer/checkbox_check.png" center center 24px 24px


