.optionsList
    text-align center

    .window
        overflow hidden
        display inline-block
        max-width 450px
        padding-left 30px
        padding-right 30px
        padding-bottom 30px

        .message
            margin 40px 20px 20px
            font-size 27px
            color 1c1c1b
        
        .description
            font-size: 14px
            line-height 18px
            text-align left
            margin 0px 40px 35px 40px

.options
    font-size: 16px
    text-align right
            
    .option
        text-align center
        padding 10px 20px
        min-width 55px
        font-weight lighter
        cursor pointer
        float right
        border-radius 10px
        margin-left 15px
        
        background #fff
        box-shadow: 0px 1px 1px 0px #c6c6c5

       
        &.cancel
            background #ededec
            color 1c1c1b
            border 1px solid #c6c6c6
            padding 9px 19px
            box-shadow none
            
        &.active, &.hoverActive:hover
            background #3a81c1
            color #fff


