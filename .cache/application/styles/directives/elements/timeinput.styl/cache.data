.timeinput {
  margin-right: 5px;
  position: relative;
  float: left;
  background: #000;
  padding: 5px 10px;
  font-size: 26px;
  height: 29px;
}
.timeinput .sep {
  font-size: 26px;
  color: #fff;
  float: left;
  width: 10px;
}
.timeinput input {
  position: relative;
  background: none;
  border: 0;
  font-size: 25px;
  color: #fff;
  width: 30px;
  height: 29px;
  float: left;
  margin: 0;
  padding: 0 0 2px 0;
}
