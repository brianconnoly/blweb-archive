position absolute
top 0
left 0
width 100%
// height 100%
bottom 0
transition left 0.2s ease

&.hideLeft
    left -100%

&.hideRight
    left 100%

&.picked
    .screenBar
        .backScreen
            margin-bottom 5px
        .novaScreenTextHelper
            margin-top 5px

.screenBar
    padding 20px 0
    padding-bottom 10px
    width inherit
    font-size 14px
    color rgba(0,0,0,0.5)
    position fixed
    z-index 2
    top 0
    background rgba(255,255,255,0.95)

    .backScreen
        margin-left 20px
        margin-bottom 10px
        cursor pointer

    .novaScreenTextHelper
        color #000
        font-size 14px
        margin-top 10px
        margin-left 20px
