position: absolute
top 7px
right 11px
z-index 10

.control
    float: right
    
    margin: 3px
    width 14px
    height 14px
    
    transform scale(1)
    transition all 0.2s ease
    
    background-position center center
    background-repeat: no-repeat
    
    &:hover
        cursor: pointer
    
    &:active
        transform scale(0.8)
        
.closeControl
    background-image url(/resources/images/nova/window/controls/close-white.svg)
    
    .styleBlack &
        background-image url(/resources/images/nova/window/controls/close.svg)
    
.minimizeControl
    background-image url(/resources/images/nova/window/controls/min-white.svg)
    
    .styleBlack &
        background-image url(/resources/images/nova/window/controls/min.svg)
        
    .noMinimize &
        display: none

.maximizeControl
    background-image url(/resources/images/nova/window/controls/max-white.svg)
    
    .styleBlack &
        background-image url(/resources/images/nova/window/controls/max.svg)

    .noMaximize &
        display: none