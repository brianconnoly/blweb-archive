.appContainer.combEdit
    background: #fcc223
    color: #494949
    
    .scroll-bottom, .scroll-right
        background: rgba(252,194,35,0.8) !important
        
    .rightContent
        bottom 0
        border-left none
        left 0
        
    .rightPanel
        bottom 0
        
    .actionsPanel
        .moveLeft
            margin-right 60px
            
    .singlePostView
        overflow-y auto !important
    
    // Main sections
    .combContent
        position: absolute
        top 0
        left 0
        bottom 0
        right 350px
        overflow: hidden
        
        .pagesContainer
            padding-left 20px
        
        .contentMode
            position: absolute
            top 0
            bottom 0
            right 0
            left 0
            
        .contentPaginatorView
            ul
                margin: 0 auto
            
        .paginator, .superPaginator
            position: absolute
            bottom 15px
            height 24px
            left 0
            right 0
            max-width 610px
            text-align: center
            
            .centered
                display: inline-block
                border 1px solid #494949
                
                border-radius 5px
                height 22px
                
                overflow: hidden

            .page
                display: inline-block
                margin 0
                cursor: pointer
                line-height 22px
                height 22px
                    
            .arrow.left
                left 10px

            // .doubleArrow.left
            //     left 5px

    .combPosts
        position: absolute
        top 0
        bottom 0
        right 0
        width 350px
        
        // overflow-y: auto
        overflow: hidden
        
        box-sizing border-box
        padding-top 10px


    .combeditor
        position relative
        width 100%
        height 100%
        margin 0 auto
        transition all ease 0.4s
        box-sizing border-box

        &.alone
            width 430px
            overflow hidden

            .content
                left -100% !important
                width 0
                opacity 0

        &.teamShown
            .column
                bottom 110px

        .column
            transition all ease 0.3s
            position absolute
            top 0
            bottom 0
            min-width 100px
            overflow hidden

            &.content
                background: #fff
                left 0
                right 430px

                .contentMode
                    size 'full'
                    padding-top 8px
                    ul.list
                        margin: 0 auto
                    
            &.posts
                width 430px
                right 0

        .boundedTeamMembers
            background: #fff
            
            position: absolute

            left 0
            right 0
            bottom 0

            height 100px //200px
            box-model border-box
            padding 5px
            overflow: auto

