.requestPreview,
.lotPreview {
  display: inline-block;
  background: #272727;
  color: #fff;
  position: relative;
  margin: 10px;
}
.requestPreview .innerPreview,
.lotPreview .innerPreview {
  overflow: hidden;
}
.requestPreview .innerPreview.lotPostPreview,
.lotPreview .innerPreview.lotPostPreview {
  width: 300px;
  height: 150px;
}
.requestPreview .innerPreview.warn,
.lotPreview .innerPreview.warn {
  background: rgba(222,47,47,0.9) !important;
}
.requestPreview .innerPreview .cancel,
.lotPreview .innerPreview .cancel {
  position: absolute;
  font-size: 20px;
  font-weight: bold;
  top: 80px;
  width: 100%;
  text-align: center;
  text-shadow: #000 1px 1px 2px;
  z-index: 100500;
  cursor: pointer;
}
.requestPreview .previewContainer,
.lotPreview .previewContainer {
  float: left;
}
.requestPreview .detailsContainer,
.lotPreview .detailsContainer {
  text-align: left;
  float: left;
  width: 150px;
  height: 150px;
  padding: 10px 0 0 8px;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
.requestPreview .detailsContainer div.makeFavourite,
.lotPreview .detailsContainer div.makeFavourite {
  position: absolute;
  top: 5px;
  right: 5px;
  font-size: 24px;
  color: #ccc;
  cursor: pointer;
}
.requestPreview .detailsContainer div.makeFavourite.active,
.lotPreview .detailsContainer div.makeFavourite.active {
  color: #fccb2b;
}
.requestPreview .detailsContainer div.makeFavourite.active:hover,
.lotPreview .detailsContainer div.makeFavourite.active:hover {
  opacity: 1;
  -ms-filter: none;
  filter: none;
}
.requestPreview .detailsContainer div.makeFavourite:hover,
.lotPreview .detailsContainer div.makeFavourite:hover {
  color: #f9df9d;
  opacity: 0.7;
  -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=70)";
  filter: alpha(opacity=70);
}
.requestPreview .detailsContainer h3.title,
.lotPreview .detailsContainer h3.title {
  width: 105px;
  font-size: 14px;
  overflow: hidden;
  white-space: nowrap;
  margin-bottom: 10px;
  font-weight: bolder;
}
.requestPreview .detailsContainer .detail,
.lotPreview .detailsContainer .detail {
  font-size: 11px;
  line-height: 12px;
  padding: 3px 0 0 26px;
  margin-bottom: 5px;
  width: 100%;
  display: inline-block;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
.requestPreview .detailsContainer .detail *,
.lotPreview .detailsContainer .detail * {
  font-weight: bolder;
}
.requestPreview .detailsContainer .detail .title,
.lotPreview .detailsContainer .detail .title {
  float: left;
  width: 100px;
  min-height: 12px;
}
.requestPreview .detailsContainer .detail .value,
.lotPreview .detailsContainer .detail .value {
  display: inline-block;
}
.requestPreview .detailsContainer .detail .value .word,
.lotPreview .detailsContainer .detail .value .word,
.requestPreview .detailsContainer .detail .value .time,
.lotPreview .detailsContainer .detail .value .time {
