.blTable
    
    .head
        overflow: hidden
        padding: 3px 0
        border-bottom 1px solid #e6e6e6
        
        position: absolute
        top 0
        left 0
        right 0
        
        .cell
            height 20px
            
            padding: 0 10px
            border-right 1px solid #e6e6e6
            
            line-height 20px
            font-size 12px
            color #333333
            
            &:last-child
                border-right none
        
    .tableLine
        width 100%
        height 40px

        &:nth-child(2n)
            background: #f9f9f9
        
    .cell
        float: left
        overflow: hidden
        padding: 0 10px
        box-sizing border-box
        
        height 40px
        line-height 40px
        
        font-size 14px

    .list
        position: absolute
        top 27px
        left 0
        right 0
        bottom 0
        overflow-y: auto

.itemActionBlock
    
    .statusBlock
        margin-right 5px
        font-size 12px
        float: right
        
        &:first-child
            margin-right 10px
            
    .actions
        margin: 10px 5px 0 0
        
        // width 78px
        height 18px
        border 1px solid #B3B3B3
        border-radius 3px
        float: right
        
        .action
            padding: 0 3px
            height 18px
            line-height 18px
            font-size 12px
            text-align: center
            cursor: pointer
            float: left
            
        .menu
            background: url(/resources/images/desktop/black/selector.svg) center center no-repeat
            border-left 1px solid #B3B3B3

            // position: absolute
            // right 0
            // top 0
            // bottom 0
            float: left
            width 17px
            height 18px
            
            z-index 10
            cursor: pointer
            
            &:first-child
                border: none
                width 16px