height 40px
transition height 0.2s ease

&:hover
    cursor pointer

    *
        pointer-events none

&.active
    height 40px

.noUpdates
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    text-align center
    line-height 40px
    font-size 12px
    color rgba(0,0,0,0.4)

.indicator
    position absolute
    top 5px
    right 100%
    margin-right -25px
    background #d4145a
    color #fff
    font-size 9px
    text-align center
    border-radius 6px
    min-width 12px
    height 12px
    line-height 13px
    font-weight 400

    z-index 1

.novaStreamLastMessage
    top 0
    left 0
    right 0
    position absolute
    transition 0.5s cubic-bezier(0.51, -1.24, 0.41, 2.53) top;
    //0.5s cubic-bezier(0.61, -1.19, 0.43, 2.07) top;

    &.new
        top 40px

    &.hideUp
        top -40px

.entities
    display none
