.novaTimelineMenu
    position absolute
    top 0
    left 0
    right 0
    height 50px
    transition all 0.2s ease
    
.rangeView
    position absolute
    top 50px
    left 0
    right 0
    bottom 0
    transition all 0.2s ease

.rangeHead
    .novaTimelineDayView
        height 140px
        margin-top -1px

.rangeItems
    position absolute
    top 140px
    right 0
    left 0
    bottom 0
    overflow auto

    .novaTimelineDayView
        height 140px
        margin-top -1px
        border-top: 1px solid #ccc;

.novaTimelineCalendar
    position absolute
    top 0
    height 0
    left 0
    right 0
    transition all 0.2s ease

&.calendar
    .novaTimelineCalendar
        position absolute
        top 0
        height 180px
        left 0
        right 0

    .novaTimelineMenu
        top 180px

    .rangeView
        top 230px
