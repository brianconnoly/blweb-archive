div.parameter
    div.title
        div.titleText(translate="'novaWizardAlbumPicker_album'")
        div.edit(translate="'novaWizardAction_edit'", ng-click="flush()", ng-if="picked")
        div.typePicker(ng-if="!picked")
            div.edit.type(
                ng-repeat="type in types", 
                translate="'socialImportApp_'+type+'s'", 
                ng-click="pickAlbumType(type)", 
                ng-class="{'active':type == currentType}")
    div.value.pickItems(ng-if="!picked")
        div.pickerItem.novaItem(ng-repeat="item in items", ng-click="pick(item)", ng-class="{'active':isPicked(item)}")
            div.novaItemPreview(nova-item-preview-type="square")
    div.value(ng-if="picked")
        div.pickedItem.novaItemScope.novaItem.novaItemPreview(
            nova-item-id="wizard.data[step.variable]",
            nova-item-type="importAlbum",
            nova-item-preview-type="square")
