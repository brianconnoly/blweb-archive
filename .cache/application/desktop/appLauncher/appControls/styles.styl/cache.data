.appControls {
  position: absolute;
  top: 8px;
  right: 6px;
  z-index: 50;
}
.appControls .controlItem {
  float: right;
  width: 14px;
  height: 14px;
  margin-left: 6px;
  -webkit-background-size: 14px 14px;
  -moz-background-size: 14px 14px;
  background-size: 14px 14px;
  cursor: pointer;
  -webkit-transform: scale(1);
  -moz-transform: scale(1);
  -o-transform: scale(1);
  -ms-transform: scale(1);
  transform: scale(1);
  -webkit-transition: all 0.2s ease;
  -moz-transition: all 0.2s ease;
  -o-transition: all 0.2s ease;
  -ms-transition: all 0.2s ease;
  transition: all 0.2s ease;
}
.appControls .controlItem:active {
  -webkit-transform: scale(0.9);
  -moz-transform: scale(0.9);
  -o-transform: scale(0.9);
  -ms-transform: scale(0.9);
  transform: scale(0.9);
  opacity: 0.9;
  -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=90)";
  filter: alpha(opacity=90);
}
.appControls .closeControl {
  background-image: url("/resources/images/desktop/appControl/white/close.svg");
}
.black .appControls .closeControl {
  background-image: url("/resources/images/desktop/appControl/black/close.svg");
}
.appControls .minimizeControl {
  background-image: url("/resources/images/desktop/appControl/white/minimize.svg");
}
.black .appControls .minimizeControl {
  background-image: url("/resources/images/desktop/appControl/black/minimize.svg");
}
.appControls .maximizeControl {
  background-image: url("/resources/images/desktop/appControl/white/maximize.svg");
}
.noMaximize .appControls .maximizeControl {
  display: none;
}
.black .appControls .maximizeControl {
  background-image: url("/resources/images/desktop/appControl/black/maximize.svg");
}
.appControls .maximizeHeaderControl {
  background-image: url("/resources/images/desktop/appControl/white/maximize-header.svg");
}
.noSettings .appControls .maximizeHeaderControl {
  display: none;
}
.appControls .maximizeHeaderControl.active {
  background-image: url("/resources/images/desktop/appControl/white/maximize-header-active.svg");
}
.black .appControls .maximizeHeaderControl {
  background-image: url("/resources/images/desktop/appControl/black/maximize-header.svg");
}
.black .appControls .maximizeHeaderControl.active {
  background-image: url("/resources/images/desktop/appControl/black/maximize-header-active.svg");
}
.appControls .helpControl {
  background-image: url("/resources/images/desktop/appControl/white/help.svg");
  display: none;
}
.withHelp .appControls .helpControl {
  display: block;
}
.black .appControls .helpControl {
  background-image: url("/resources/images/desktop/appControl/black/help.svg");
}
