.contentPreview
    position: absolute
    overflow: hidden

    top 0px
    bottom 0px
    right 0px
    left 0px

    background: rgba(255,255,255,0.2)

    transition all 0.2s ease

    perspective 800

    &.transparent
        background: rgba(255,255,255,0.15)

    //&.text .locked
    //    sprite "/resources/images/icons/locked.png" -350px 0 500px 202px
    //    width 100%
    //    height 100%

    .repost-label
        left initial
        right 8px

    .deleted-mark
        display: block
        position: absolute
        pointer-events auto
        cursor: pointer
        right 0
        bottom 0
        height 30%
        padding 5%

        background: rgba(255,255,255,0.5)

    .shield
        position: absolute
        top 0
        right 0
        left 0
        bottom 0
        opacity: 1

        z-index 500

        transition all 0.2s ease

    &:hover
       // .repost-label
       //     opacity 0
       .shield
           opacity 0

    img
        height 100%
        margin 0 auto

        &.audio
            display: block
            height 80%
            margin 10% auto

    .shield img
        //width 100%
        height 100%
        margin 0 auto

    div.mini
        float: left
        display: block

        width 44% //55px
        height 44% //55px
        margin 4% 0 0 4%

        overflow: hidden
        position: relative

        &.single
            width 90%
            height 90%

            .text-preview
                font-size 14px

        div.text-preview
            font-size 10px
            padding 5px
            word-wrap break-word

    &.album
        &.audio
            sprite "/resources/images/icons/albums/audio.png"
        &.image
            sprite "/resources/images/icons/albums/images.png"

        .play_button
            margin-top -35px

    &.video
        .views
            position: absolute
            padding 3%
            top 0
            left 0
            right 0
            background: rgba(0,0,0,0.8)
            color #fff
            font-size 12px
            text-align: right
            z-index 20

        .duration
            position absolute
            left 5px
            top 2px
            padding 3px 0
            font-size 12px
            text-align right
            z-index: 25
            color white

            span
                font-size 12px
                padding-right 3px

    .title
        position absolute
        padding 4px 0 4px 7px
        margin 0 auto
        white-space nowrap
        left 0
        right 0
        background rgba(0,0,0,0.8)
        z-index 111
        color white

        &.top
            top 0
        &.bottom
            bottom 0
        &.center
            text-align center

        span
            display block
            font-size 13px
            color #fff
            //margin 0 10px
            overflow hidden

    div.status
        position absolute
        top 50%
        left 50%
        margin -40px 0 0 -40px
        width 80px
        height 80px
        sprite "/resources/images/icons/timelineStatus/pending.png"


    div.text-preview
        background: rgba(255, 255, 255, 1)
        padding 10px
        position: absolute

        top 0
        left 0
        right 0
        bottom 0

        word-wrap break-word
        overflow hidden
        color black

