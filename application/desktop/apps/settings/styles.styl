.appContainer.settings
    
    background: #fff
    
    .remove
        background: url(/resources/images/desktop/removeCross.svg) center center no-repeat
        position: absolute
        right 5px
        top 5px
        
        width 16px
        height 16px
        
        opacity 0
        transition all 0.2s ease
        cursor pointer
        
    .dropHelperMsg
        position: absolute
        top 0
        right 0
        left 0
        bottom 0
        
        padding-top 30%
        
        opacity: 0
        pointer-events none
        transition opacity 0.2s ease
        
        background: rgba(255,255,255,0.8)
        
        color: #554545
        font-size 22px
        text-align: center
        
    .wallpaperDropable
        
        &.wallpaper-drop
            
            .dropHelperMsg
                opacity: 1
    
    .scroll-bottom, .scroll-right
        background: rgba(180,180,180,0.8) !important
    
    .clickable
        cursor: pointer
        *
            cursor: pointer
    
    .bl-checkbox
        width 25px
        height 13px
        background: #494949
        border 1px solid #494949

        &.checked
            .tumbler
                background: #fff
                right 0 !important
                
            .button
                background: #494949
        
        .tumbler
            background: #494949
            right 12px
            top 0
            bottom 0
            left 0
            
        .button
            top 1px
            right 1px
            
            width 11px
            height 11px
    
    .body
        box-shadow none
        border-top 1px solid #ccc
        
    .leftPanel
        width 150px
        
    .rightContent
        left 150px
        
    .menuItem
        width 100%
        height 41px
        
        font-size 16px
        line-height 40px
        
        box-sizing border-box
        padding: 0 20px
        
        cursor: pointer
        
        background: #fff
        border-bottom 1px solid #eee
        
        span
            cursor: pointer
        
        &.active
            cursor: default
            background: #efefef

            span
                cursor: default
        
    .line
        width 100%
        height 34px
        line-height 34px
        transition background ease 0.2s
        display inline-block
        background: #fff
        border-bottom 1px solid #E6E6E6
        
        &:last-child
            border-bottom none

        &:hover
            background $hoveredWhite
        .bl-checkbox:hover, .detacher:hover
            cursor pointer

        ::-webkit-input-placeholder
            color rgba(0, 0, 0, 0.4)
        :-moz-placeholder
            color rgba(0, 0, 0, 0.4)
        ::-moz-placeholder
            color rgba(0, 0, 0, 0.4)
        :-ms-input-placeholder
            color rgba(0, 0, 0, 0.4)
        
        &.setUserData
            background #51c257
            color #fff
            text-align center
            cursor pointer
        
        input
            border 0
            margin 0
            padding 0
            width 50%
            height 100%
            float left
            line-height 15px
            font-size 15px
            
        .lineTitle
            width 50%
            height 100%
            float left
            font-size 14px
            color $mainColor
            text-align left
            box-sizing border-box
            white-space nowrap
            
    .err
        position relative
        padding 10px 0
        
        height: auto

        font-size 10px
        line-height 13px
        text-align center
        color #8e272d

    .resend
        position relative
        hight 40px
        line-height 42px
        text-align center
        cursor pointer
        background: #74B169;
        color: #fff;
            
    .settingsFrame
        
        .header
            background: #E6E6E6
            overflow: hidden
            padding 0px 20px
            margin-bottom: 1px
            
            font-size 16px
            line-height: 32px
            font-weight: bolder
            
            padding-top 5px
                
        .section
            overflow: hidden
            padding: 0 20px
            
        .textSection
            background: #fff
            margin-bottom: 1px
            text-align: center
            padding 10px
            
            font-size 12px
            line-height 13px
            
        .billingItems
            
            .line
                text-align: center
            
            .za
                margin-left 20px
                
            input
                width 100%
                text-align: center
            
        .sectionItemContainer
            padding 10px
            background: #fff
            
        .sectionItem
            float: left
            // margin 10px
                
            &:hover
                .snPic
                    color #fff 
            
            .snPic
                margin 10px
                
                width 60px
                height 60px
                border-radius 4px
                
                font-size 24px
                
                line-height: 60px
                text-align: center
                
                color #ddd
                
                cursor: pointer
                
            .snTitle
                cursor: pointer
                margin-top 10px
                margin-bottom 10px
                width 100%
                text-align: center
                font-size 10px
                
        .optionsSection
            
            .bl-checkbox
                float right
                margin 9px 10px 0 0
            .line:hover, .line *:hover
                cursor pointer
    
    .accountsSettingsFrame
        
        .line
            .combobox
                float: right
                width 50%
                height 34px
                background: none
                cursor: pointer
                
                *
                    cursor: pointer

                .value
                    font-size 14px
                    line-height: 34px
                    
            .icon
                width 20px
                height 20px
                line-height 20px
                font-size 8px   
                margin 7px 7px 7px 0
                
                .shield
                    border-radius 2px
                    width 100%
                    height 100%         
            // .icon .shield
            //     opacity 0.7
            //     transition opacity ease 0.2s

            .icon.plus
                sprite "/resources/images/icons/pluses/settings-black.png" 10px 10px 20px 20px no-repeat 40px 40px
                background-color #fff

            // &:hover
            //     .shield
            //         opacity 0

            &:first-child
                &:hover
                    cursor default

            &.migration
                background #7bb5d7
                color #ffffff
                text-align center
                cursor pointer

                &.not_available
                    display none

            &.tableImport
                background #222
                color #fff
                text-align center
                cursor pointer

            .icon, .sn, .bl-checkbox, .close-button, .detacher
                float left

            .bl-checkbox
                margin-top 9px

            .detacher
                background url("/resources/images/desktop/appControl/black/close.svg")
                width 14px
                height 14px
                margin 9px 0 9px 9px

            .sn, .icon .shield
                // width 40px
                // height 40px
                text-transform uppercase
                text-align center
                color #ffffff

            .sn
                margin 0 0  0 2px

                &:hover
                    cursor pointer
    
    .settingsFrame
        .colorsSection
            padding 15px
            background: #fff

            .color
                cursor: pointer
                
                width 70px
                height 50px
                
                float: left
                margin 5px
                
                &:hover .remove
                    opacity: 1
                
                &.none
                    background: url(/resources/images/desktop/actions/black/header-button-cross.svg) center center no-repeat
                
                img
                    cursor: pointer
                
                &.active
                    outline 4px solid #FCEE21
