$barHeight = 42px
$barLineHeight = 42px

#combEdit
    background: rgba(249, 209, 88, 0.95)
    
    .option-blur-on &
        background: rgba(249, 209, 88, 0.6)

    .turbo &
        background: rgba(249, 209, 88, 1)

    .container
        height 100%
        overflow hidden
        padding $barHeight ($rightPanelWidth/2) 0 ($rightPanelWidth/2)
        box-sizing border-box
        transition all ease 0.3s

        .showRight &
            padding-left 0
            padding-right $rightPanelWidth

        .combeditor
            position relative
            width 100%
            height 100%
            margin 0 auto
            transition all ease 0.4s
            box-sizing border-box

            &.alone
                width 430px
                overflow hidden

                .content
                    left -100% !important
                    width 0
                    opacity 0

            &.teamShown
                .column
                    bottom 110px

            .column
                transition all ease 0.3s
                position absolute
                top 0
                bottom 0
                min-width 100px
                overflow hidden

                &.content
                    left 0
                    right 430px

                    .contentMode
                        size 'full'
                        padding-top 8px
                        ul.list
                            margin: 0 auto
                        
                &.posts
                    width 430px
                    right 0

            .boundedTeamMembers
                position: absolute

                left 0
                right 0
                bottom 0

                height 100px //200px
                box-model border-box
                padding 5px
                overflow: auto

            //.category
            //    display inline-block
            //    box-sizing border-box
            //    width 100%
            //
            //    .list
            //        overflow: hidden

            .paginator, .superPaginator
                position: absolute
                bottom 0
                height 38px
                left 0
                right 0
                max-width 610px
                text-align: center

                .page
                    display: inline-block
                    margin 0 5px
                    cursor: pointer
                    line-height 30px
                    opacity 0.3

                    &.active
                        cursor: default
                        color #000
                        opacity 1


