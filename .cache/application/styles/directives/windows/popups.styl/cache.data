.shader {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.8);
  z-index: 5;
}
.option-blur-on .shader {
  background: rgba(0,0,0,0.6);
}
.turbo .shader.empty {
  background: none !important;
}
.turbo .shader {
  background: #111;
}
.popup {
  background: rgba(0,0,0,0.4);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 30px 0;
  display: none;
  z-index: 11;
}
.popup:hover {
  cursor: pointer;
}
