<div ng-click="goRight()" ng-class="{'hidden':totalPages-1 &lt;= paginatorParams.currentPage}" class="right arrow"></div><div class="right afterTypes"></div><div ng-click="goLeft()" ng-class="{'hidden':0 == paginatorParams.currentPage}" class="left arrow"></div><div class="left beforeTypes"></div><div ng-style="{'width':freeSpaceWidth}" class="centerPages"><span class="centered"><div ng-repeat="page in beforeTypes" ng-click="goPage(page.num)" ng-class="{'active':isActive(page)}" class="page type {{page.class}}"></div><div ng-repeat="page in pages" ng-click="goPage(page.num)" ng-class="{'active':isActive(page)}" class="page {{page.class}}">{{pageTitle(page)}}</div><div ng-repeat="page in afterTypes" ng-click="goPage(page.num)" ng-class="{'active':isActive(page)}" class="page type {{page.class}}"></div></span></div>