background: none

width 296px
height 46px

text-align: center
line-height: 42px

margin: 20px auto

color: #f6f6f6
font-size 25px

border 1px solid #f6f6f6
border-radius 2px

opacity 1
transition opacity 0.2s ease

&:hover
    cursor: pointer

&.inactive
    pointer-events none
    opacity: 0.5
    cursor: default