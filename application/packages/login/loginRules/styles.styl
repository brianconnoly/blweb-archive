background: #fff

.html-content
    width 700px
    margin: 0 auto
    
.shade
    position: absolute
    left 50%
    margin-left: -342px
    
    width: 684px
    height 1px
    background: #e0e0df
    
    &.top
        // background: url(/resources/images/login/divideLine.png) center center no-repeat
        top 0
        
    &.bottom
        // background: url(/resources/images/login/divideLine-bottom.png) center center no-repeat
        bottom 0

.text
    position: absolute
    top 120px
    bottom 20px
    left 0
    right 0
    
    text-align left
    
.backText
    position: absolute
    
    top 50px
    left 10%
    
    width 50px
    height 50px
    
    border-radius 50px
    
    text-align: center
    
    border 1px solid #585757
    border-radius 70px
    
    transition all 0.1s ease
    
    z-index 999
    
    &:hover
        cursor: pointer
        background: #fff
        
    img
        margin-top: 0px