                        width 57px
                        height 57px
                        
            .date
                text-align: center
                font-size 10px
                line-height 30px
                padding: 0
                
                &.doubleLines
                    line-height: 60px
                
            .actions
                padding: 2px 2px
                
                .mode
                    overflow: hidden
                    
                    &.mediaplanner
                        .timeBox
                            padding-top: 6px
                            padding-left 6px
                            box-sizing border-box

                    .buttons
                        overflow: hidden
                        margin-top 25px
                        
                        &.single
                            margin-top: 15px
                            
                            .action
                                height 20px
                                margin-left: 60px
                    
                    .bottom
                        text-align: center
                        
                        .textAction
                            font-size 12px  
                            cursor: pointer
                            margin: 0 10px
                            
                        .action
                            float: none
                            font-size 12px  
                            height 20px
                            line-height 20px
                            display: inline-block
                            margin: 0 10px
                    
                    .timeScroller
                        position absolute
                        top 0
                        left 0
                        right 0
                        
                        .scrollerButton                            
                            &.right
                                right 55px
                                
                                &.doubleArrow
                                    right 20px
                            
                            &.left
                                left 55px
                                
                                &.doubleArrow
                                    left 20px

                    .timeBlock
                        margin-top 20px
                        margin-left 12px
                        overflow: hidden
                        
                        .timeBox
                            float: left
                            
                            width 130px
                            color: #434242
                            font-size 46px
                            
                            input, span
                                color: #434242
                                font-size 46px
                                
                            input
                                width 50px
                                height 50px
                                                        
                        .dateBox
                            margin-top 10px
                            float: left
                            
                            .dateLine
                                font-size 12px
                                line-height: 12px
                
                .action
                    float: left
                    margin: 0 4px
                    
                    width 50px
                    height 40px
                    
                    font-size 10px
                    line-height 11px
                    text-align: center
                    
                    border 1px solid #e6e6e6
                    border-radius 4px
                    cursor: pointer
                    
                    display: table
                    
                    p
                        display table-cell
                        vertical-align: middle
                        cursor: pointer
                    
                    &:hover, &.blueButton
                        background: #3870B1
                        color #fff
                        
                    &.toRight
                        width 80px
                    
            .fader
                position: absolute
                bottom 0
                left 0
                right 0
                height 40px
                background: linear-gradient( to bottom, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 70%)
            
            &:nth-child(2n)
                .fader
                    background: linear-gradient( to bottom, rgba(249,249,249,0) 0%, rgba(249,249,249,1) 70%)

            &.selected
                .text .fader
                     background: linear-gradient( to bottom, rgba(56,112,177,0) 0%, rgba(56,112,177,1) 70%)

                .action:hover
                    background: #fff !important
                    color #3870B1 !important
                    
                    p
                        color #3870B1 !important
                        
                .timePicker
                    input, span
                        color: #fff !important
                        
                .timeBox
                    color: #fff !important

