div.touchHelper {
  display: none;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 40px;
  background: #fff;
  border-top: 1px solid #ccc;
}
div.touchHelper.big {
  height: 80px;
}
div.touchHelper.big .button {
  line-height: 75px;
  font-size: 30px;
}
div.touchHelper.big .button.right {
  margin-right: 35px;
}
div.touchHelper.big .button.left {
  margin-left: 35px;
}
div.touchHelper.active {
  display: block;
}
div.touchHelper .button {
  float: left;
  color: #1664f9;
  line-height: 38px;
  margin-left: 15px;
}
div.touchHelper .button.right {
  float: right;
  margin-left: 0;
  margin-right: 15px;
}
div.touchHelper .button.disabled {
  color: #ccc;
}
div.touchHelper .button.active {
  color: #f72125;
}
