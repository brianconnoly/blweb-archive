.appContainer.mediaPreview
    
    background: #75A843
        
    .body
        box-shadow none
        background: none
        
    .drag &
        .content
            pointer-events none
        

    .lightboxPreview
        background: #f2f2f2 //rgba(255,255,255,1)
        
        .window
            // display: table
            width 100%
            height 100%
            
            .download
                overflow hidden
                height 30px
                width 100%
                
                .button
                    position: absolute
                    top 0
                    right 0
                    width 29px
                    bottom 0px
                    
                    cursor: pointer
                    
                    background: #fff url(/resources/images/desktop/actions/black/header-button-download.svg) center center no-repeat
                    
                    border-bottom 1px solid #aaa
                    border-left 1px solid #aaa
                    
                .url
                    position: absolute
                    top 0
                    right 30px
                    left 0
                    bottom 0px
                    
                    line-height: 30px
                    font-size 16px
                    
                    padding 0 7px
                    
                    background: #fff
                    border-bottom 1px solid #aaa
                    
                    user-select text
                    cursor: pointer

            .picture
                // display: table-cell
                // vertical-align: middle
                // text-align: center;
                
                img
                    position: absolute
                    width 100%

                &.wide img
                    width 100%

                &.tall img
                    height 100%
                    
            .arrow
                position: absolute
                bottom 20px
                
                left 50%
                
                width 30px
                height 30px
                
                border-radius 30px
                border 2px solid #fff
                background-color rgba(0,0,0,0.5)
                
                background-position center center
                background-repeat no-repeat
                
                cursor: pointer
                
                transition background-color 0.2s ease
                
                &:hover
                    background-color rgba(0,0,0,0.7)
                
                &.left
                    background-image: url(/resources/images/desktop/white/leftArrow.svg)
                    
                    margin-left: -40px
                
                &.right
                    background-image: url(/resources/images/desktop/white/rightArrow.svg)
                    margin-left: 10px
                        
        
        .video
            top 0
            bottom 0
            right 0
            left 0