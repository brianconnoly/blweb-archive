max-width 210px

.settings
    position absolute
    top 0
    left 8px
    margin 5px
    width 10px
    height 10px
    background #a6a6a6
    cursor pointer

.title
    font-size: 12px;
    height: 25px;
    line-height: 25px;
    padding-left: 20px;
    color: #000;

    cursor pointer

    &.active
        background #F6F4F4
        cursor default

    .settings
        margin 7px 5px 7px 6px
        left 0

    span
        pointer-events none

.subItem
    font-size: 12px;
    height: 25px;
    line-height: 25px;
    padding-left: 28px;
    // margin-left 8px
    color: #000;

    .subTitle
        cursor pointer

    &.active
        background #F6F4F4

        .subTitle
            cursor default
