        line-height: 140px
        font-size 50px

        .time
            position: absolute
            
            top 0px
            left 0px
            right 0px

            height: 70px
            line-height: 70px

            font-size: 20px
            color: #000

        .rightArrow
            height 50px
            width 50px

            top:50px;
            font-size 20px
            line-height: 50px;
            right:-70px;

            position: absolute

            background: rgba(255,255,255,0.6)

            .turbo &
                background: #fff

        .leftArrow
            height 50px
            width 50px

            top:50px;
            font-size 20px
            line-height: 50px;
            left:-70px;

            position: absolute

            background: rgba(255,255,255,0.6)

            .turbo &
                background: #fff


        .turbo &
            background: #fff
            color: #1664F9

        .touch &
            display: block

    div.timebar
        position: absolute
        z-index: 5000
        top 0
        left 0
        height 150px
        // border-right 1px solid #3285b6 // rgba(255,255,255,1) //#91CDED
        display: none
        pointer-events: none
        opacity: 0.9

        font-size: 17px

        transition opacity 0.1s ease

        .touch &
            display: none

        &.showed
            display: block
        &.hidden
            opacity: 0 !important

