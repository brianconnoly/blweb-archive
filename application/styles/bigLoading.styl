@keyframes hideLoading
    0%
        opacity 1
    50%
        opacity 1
    100%
        opacity 0
        
@keyframes appearScreen
    0%
        opacity 0
        transform scale(0.9)
    10%
        
        transform scale(0.9)
    100%
        opacity 1
        transform scale(1)
        
div.big_loading
    position: fixed
    top 0
    bottom 0
    right 0
    left 0
    z-index 999
    text-align: center
    background: #13668d // rgba(255,255,255,0.8)
    opacity 1
    
    animation appearScreen 0.5s ease
    transform scale(1)
    transition all 1s ease

    .buzzLogo
        position: absolute
        
        margin-top -60px
        top 45%
        
        margin-left: -50px
        left 50%
        
        transition all 1s ease

    .progress
        position: absolute
        opacity 1
        
        width 230px
        height 3px
        
        top 45%
        margin-top: 40px
        
        left 50%
        margin-left: -115px
        
        border-radius 4px
        background: rgba(255,255,255,0.3)
        
        transition all 0.5s ease
        
        .filled
            position: absolute
            
            background: #fff
            border-radius 2px
            
            height 100%
            left 0     
            width 0  
            
            transition width 5s linear    
                
            &.full
                width 100% !important
                transition width 0.2s linear
    
    .status
        position: absolute
        left 0
        right 0
        top 45%
        margin-top: 55px
        color: #fff
        
        font-size 14px
        text-align: center

    .noBigLoading &
        pointer-events none
        animation hideLoading 2s ease
        opacity 0
        
        .buzzLogo
            top 0
            margin-top: 30px
            
        .progress
            opacity 0
