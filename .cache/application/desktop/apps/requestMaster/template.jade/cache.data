<div class="dragHandler topBar noMaximize noSettings black"><process-bar></process-bar><div class="appControls"></div><div ng-click="stepBack()" ng-if="canGoBack()" class="backButton"></div><div translate="'create_market_request'" class="title"></div></div><div class="body dragHandler"><div ng-hide="loaded" class="loader"></div><div class="infoContainer"><div class="infoItem"><div class="image"><img ng-src="{{proxyImage(fromCommunity.photo)}}"/></div><div class="info"><div class="infoLine">{{fromCommunity.name}}</div><div class="infoLine"> <span>Аудитория: </span><span>{{lot.minSubscribers}}</span></div><div class="infoLine"><span class="dateFrom">{{dateFrom | timestampMask: "DD MMM"}}</span><span> — </span><span class="dateTo">{{dateTo | timestampMask: "DD MMM"}}</span></div><div class="infoLine"><span class="timeFrom">{{timeFrom | timestampMask: "hh:mm"}}</span><span> — </span><span class="timeTo">{{timeTo | timestampMask: "hh:mm"}}</span></div></div></div><div class="infoItem"><div class="image"><img ng-src="{{proxyImage(toCommunity.photo)}}"/></div><div class="info"><div class="infoLine">{{toCommunity.name}}</div><div class="infoLine"> <span>Аудитория: </span><span>{{toCommunity.membersCount}}</span></div><div class="infoLine">{{request.timestamp | timestampMask: "DD MMM YY"}}</div><div class="infoLine">{{request.timestamp | timestampMask: "hh:mm"}}</div></div></div></div><div ng-bind-html="localization.translate('makeRequest_checkText', conclusionVars)" class="checkText"></div><div class="prefixText">{{localization.translate('makeRequest_prefixText')}}</div><div class="settings"><div ng-model="request.timestamp" dateonly="true" class="datePicker">{{date | timestampMask: "DD.MM.YY"}}</div><div ng-model="request.timestamp" class="timePicker">{{request.timestamp | timestampMask: "hh:mm"}}</div><div ng-if="lot.buzzLot != true" class="costPicker"><input ng-model="request.cost"/></div><div ng-if="lot.buzzLot == true" class="costPicker"><span>{{humanizeDays(lot.price)}}</span></div></div><div ng-bind-html="localization.translate('makeRequest_conclusionText', conclusionVars)" class="conclusionText"></div><div class="bottomButtons options"><div ng-click="createRequest()" ng-show="checkTime() &amp;&amp; checkAudience()" class="makeRequest option hoverActive"> <span ng-hide="editRequest()">{{localization.translate('do_create_market_request')}}</span><span ng-show="editRequest()">{{localization.translate('do_create_market_request_make_offer')}}</span></div><div ng-click="onEscape()" class="cancelRequest option cancel hoverActive">Отмена</div></div><div ng-hide="checkTime()" class="warning">{{localization.translate('make_request_time_dont_match')}}</div><div ng-hide="checkAudience()" class="warning">{{localization.translate('make_request_audience_dont_match')}}</div></div>