.topShield
    z-index 510 !important

.appContainer.lotManager
    background: #f2f2f2
    color #494949
    
    .scroll-bottom, .scroll-right
        background: rgba(180,180,180,0.8) !important
    
    .body
        box-shadow none
        border-top 1px solid #ccc
        
    .bl-checkbox
        margin-top 5px
        
        width 25px
        height 13px
        
        background: #ccc
        cursor: pointer
        
        *
            cursor: pointer
        
        &.checked
            .button
                background: #fff
        
        .tumbler
            right 11px
        
        .button
            background: #E6E6E6
            top 2px
            right 2px
            
            width 11px
            height 11px                
        
    .rightContent
        

        .currentLot
            
            .smallPreview
                float: left
                width 30px
                height 30px
                
                margin 5px 10px
                overflow: hidden
                
            .title
                padding-right 200px
                
            .params
                    
                .bl-checkbox
                    float: right
                    margin 12px
                    margin-right 5px
                    
                    opacity: 0
                    pointer-events none
                    transition opacity 0.2s ease
                    
                    &.active
                        pointer-events auto
                        opacity 1
                    
                .published
                    float: right
                    opacity: 0
                    pointer-events none
                    transition opacity 0.2s ease
                    font-size 16px
                    
                    span
                        cursor: pointer
                    
                    &.active
                        pointer-events auto
                        opacity 1
                        
        .lotSettings
                        
            .buzzlot
                position: absolute
                top 0
                right 10px
            
            .previewColumn
                margin-top 17px
                width 192px
                padding: 0
                float: left
                overflow: hidden
                
                .previewContainer
                    margin-right 0
                    margin-left 25px
                    float: none

                .previewButton
                    overflow: hidden
                        
                    padding 5px 10px
                    margin: 20px 15px 0 40px

                    border 1px solid #494949
                    border-radius 3px
                    color #494949
                    
                    font-size 12px
                    text-align: center
                    cursor: pointer
                
                .removeButton
                    margin-top 10px
                    margin-left 25px
                    text-align: center
                    font-size 12px
                    color #C1272D
                    cursor: pointer

            .paramsColumn
                margin-top 12px
                float: left
                
                &.disabled
                    pointer-events none
                    
                    .settingsInput, .datePicker, .timePicker input
                        background: #f2f2f2 !important
            
            
            .list
                margin-bottom 15px
                overflow: hidden
                
                .line
                    overflow: hidden
                    font-size 15px
                    line-height 30px
                    
                    .title
                        color #333333
                        width 150px
                        float: left
                        text-align: right
                        margin-right 10px
                        
                    .value
                        text-overflow: ellipsis
                        overflow: hidden
                        white-space nowrap 
                        
                        .settingsInput, .datePicker
                            margin-top 2px
                            height 25px
                            box-sizing border-box
                            background: #fff
                            border 1px solid #CCCCCC
                            
                            font-size 16px
                            line-height 25px
                            color #000
                            padding: 0 10px
                            
                            &.longInput
                                width 174px
                                
                            &.shortInput
                                width 76px
                                float: left
                                
                        .datePicker
                            width 76px
                            float: left
                            padding 0 6px
                            
                        .separator
                            height 25px
                            width 22px
                            text-align: center
                            line-height 28px
                            float: left
                            
                        .timePicker
                            padding: 0 15px
                            overflow: hidden
                            
                            input, span
                                color #000
                                font-size 16px
                                line-height 23px
                            
                            input
                                width 20px
                                
                            span
                                margin: 0
                            
                            &.separated
                                padding: 0
                                
                                span
                                    display: none
                                    
                                input
                                    width 35px
                                    padding: 0
                                    text-align: center
                                    
                                    margin-top 2px
                                    height 25px
                                    box-sizing border-box
                                    background: #fff
                                    border 1px solid #CCCCCC
                                    
                                    font-size 16px
                                    line-height 25px
                                    color #000
                                    
                                    margin-right: 4px

        .requestsList
            
            .head
                .cell.status
                    padding-left 10px
            
            .cell
               
                &.pic
                    width: 50px
                    padding: 0
                &.community
                    width 150px
                    text-overflow: ellipsis
                    overflow: hidden
                    white-space nowrap 
                &.subscribers
                    width: 100px
                    text-align: right
                &.price
                    width 67px
                    text-align: right
                &.time
                    width 116px
                &.status
                    width 90px
                    padding: 0
                    


    
