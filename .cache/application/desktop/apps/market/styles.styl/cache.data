.itemPreview.lot,
.itemPreview.post {
  overflow: visible;
}
.itemPreview.lot .priceTag,
.itemPreview.post .priceTag {
  position: absolute;
  bottom: 0;
  right: 0;
  padding: 0 10px;
  font-size: 23px;
  line-height: 30px;
  height: 30px;
  color: #494949;
  background: #ff0;
  -webkit-transition: bottom 0.2s ease;
  -moz-transition: bottom 0.2s ease;
  -o-transition: bottom 0.2s ease;
  -ms-transition: bottom 0.2s ease;
  transition: bottom 0.2s ease;
  z-index: 1000;
}
.itemPreview.lot:hover .priceTag,
.itemPreview.post:hover .priceTag {
  bottom: -30px;
}
.zoom_min .itemPreview.lot .priceTag,
.zoom_min .itemPreview.post .priceTag {
  font-size: 12px;
  line-height: 16px;
  height: 16px;
}
.appContainer.market {
  background: #f2f2f2;
}
.appContainer.market .page {
  border-color: #484848;
}
.appContainer.market .page.active {
  background: #484848;
}
.appContainer.market .body {
  background: #fff;
  -webkit-box-shadow: none;
  box-shadow: none;
  overflow-y: auto;
  padding-bottom: 30px;
}
.appContainer.market .body .stepView {
  min-height: 0;
}
.appContainer.market .sectionPicrute {
  width: 100%;
  height: 288px;
}
.appContainer.market .bigSlider {
  width: 100%;
  height: 288px;
  overflow: hidden;
  margin-bottom: 10px;
}
.appContainer.market .bigSlider .paginatorCircle {
  position: absolute;
  bottom: 15px;
  left: 0;
  right: 0;
  z-index: 100;
}
.appContainer.market .bigSlider .paginatorCircle .page {
  border-color: #484848;
}
.appContainer.market .bigSlider .paginatorCircle .page.active {
  background: #484848;
}
.appContainer.market .bigSlider .slide {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  -webkit-transition: all 0.5s ease;
  -moz-transition: all 0.5s ease;
  -o-transition: all 0.5s ease;
  -ms-transition: all 0.5s ease;
  transition: all 0.5s ease;
}
.appContainer.market .bigSlider .slide img {
  height: 100%;
}
.appContainer.market .bigSlider .slide.clickable {
  cursor: pointer;
}
.appContainer.market .bigSlider .slide.hideRight {
  left: 100%;
}
.appContainer.market .bigSlider .slide.hideLeft {
  left: -100%;
}
.appContainer.market .bigSlider .slide.active {
  z-index: 50;
}
.appContainer.market .bigSlider .arrow {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100px;
  z-index: 100;
  cursor: pointer;
  background-position: center center;
  background-repeat: no-repeat;
  -webkit-background-size: 27px 55px;
  -moz-background-size: 27px 55px;
  background-size: 27px 55px;
}
.appContainer.market .bigSlider .arrow.left {
  left: 0;
  background-image: url("/resources/images/desktop/black/leftArrow.svg");
}
.appContainer.market .bigSlider .arrow.right {
  right: 0;
  background-image: url("/resources/images/desktop/black/rightArrow.svg");
}
