<div ng-show="contextStatus.active"><div ng-if="multiselectState.buffer!=null &amp;&amp; contextStatus.showPost" class="postPreview"><li item="multiselectState.buffer" class="item itemPreview"></li><div ng-mousedown="clearBuffer($event)" class="clear">{{localization.translate('contextmenu_clear_buffer')}}</div></div><div ng-show="contextStatus.time" class="menuTimeInfo"><span class="time">{{contextStatus.time | timestampMask: 'time'}}</span><span class="date">{{contextStatus.time | timestampMask: 'DD ofMMMM YYYY'}}</span></div><div ng-repeat="action in contextStatus.actions | reverse" ng-mousedown="fireAction(action.action, $event)" translate="action.phrase" class="item"></div></div>