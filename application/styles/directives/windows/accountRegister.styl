.accountRegister
    height 100%
    padding-top 50px
    //background rgba(0,0,0,0.7)
    text-align center
    z-index 9

    .add-button
        margin 6px
        float right
    .remove-button
        margin 10px 45px 0 0
        float right

    form
        //width 40%
        margin auto
        display inline-block

        button
            width 48%
            float left
            margin-left 2%
            margin-top 11px

        div.face
            width 133px
            height 115px
            background-image url("../resources/images/icons/faces@2x.png")
            display inline-block

        input
            float left
            width 100%

        ul.options
            display: block
            width 100%
            position: relative
            overflow hidden
            color white


            li.option
                width 100%
                height 33px

                .wrap
                    margin-left 36px
                    overflow: hidden
                    width 100%
                    height 100%
                    font-size 11px
                    border-bottom 1px solid white

                    span.descr
                        font-size 15px
                        line-height 34px

                        span.blocked
                            padding-left 5px
                            color red

                *:hover
                    cursor pointer
                &:hover
                    background rgba(255, 255, 255, 0.3)
                    transition all ease 0.3


            li.network-type
                height 30px
                font-family "HelveticaNeue", "Helvetica"

                span.descr
                    font-size 19px
                    line-height 30px


                .icon
                    width 22px
                    height 22px
                    border-radius 3px
                    float left
                    margin 4px 6px

                    .name
                        margin 4px 3px
                        font-size: 13px;
                        text-transform: uppercase;