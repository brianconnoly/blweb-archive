.appLauncher
    
    .panelWide
        
        .leftPanel
            width 208px

            .panelItem
                width 168px
                padding-left 40px
            
        .rightContent
            left 209px
            
    .withRight
        .rightContent
            right 99px
        .rightPanel
            right 0
            
    div.rightPanel
        position: absolute
        top 0
        bottom 31px
        right -100px
        width 99px
        
        box-sizing border-box
        padding: 15px 0
        
        overflow-y: auto
        border-left 1px solid #e6e6e6
        
        transition right 0.2s ease
        
        .previewContainer
            margin: 0
            margin-left 14px
            
            margin-bottom 15px
            
        .divider
            width 100%
            border-top 1px solid #e6e6e6
            margin-bottom 15px
            float: left
            
        .itemPreview
            &:hover
                .name
                    opacity 1
            .name
                font-size 11px
                width 100%
                height 100%
                text-align: center
                min-height 100%
                padding: 0
                box-sizing border-box
                padding-top 14px
                opacity 0
                transition opacity 0.2s ease
        
    
    .leftPanel
        position: absolute
        top 0
        bottom 31px
        left 0
        width 180px
        padding: 0 !important
        
        overflow-y: auto
        
        border-right 1px solid #cccccc
        
        .panelItem
            overflow: hidden
            width 160px
            padding-bottom 10px
            padding-top 10px
            padding-left 20px
            
            cursor: pointer
            
            *
                cursor: pointer
            
            .previewContainer
                margin: 0

            &.active
                background: #f2f2f2
                cursor default
                *
                    cursor: default
                .previewContainer
                    outline 4px solid #FCEE21
            
            &:first-child
                padding-top 20px
                
            &.small
                width 120px
                padding-left 60px
                
                .previewContainer
                    width 100px
                    height 72px
                    
                    .name
                        font-size 10px
                        line-height 11px
                        
            .notify
                position: absolute
                bottom 51px
                left 10px

                width 18px
                height 18px

                border 1px solid #C1272D
                border-radius 10px

                font-weight: bolder
                color #fff
                text-align: center
                line-height 18px
                font-size 11px
                
                z-index 10000
                
                pointer-events none
                display: none
                
                &.active
                    display: block
                    
                &.counter
                    background: #C1272D

    .rightContent
        position: absolute
        top 0
        right 0
        bottom 31px
        left 181px
        
        overflow-y: auto

        border-left 1px solid #e6e6e6
        transition right 0.2s ease