    .ugcSettings
        .parameters
            float: left
            width 420px
            height 118px
            
            padding-top 30px
            
        .parameter
            overflow: hidden
            margin-bottom 6px
            
            .datePicker
                border 1px solid #EBEBEB
                border-radius 3px
                height 20px
                width 70px
                text-align: center
            
            .title
                width 135px
                text-align left
                font-size 12px
                float: left
                margin-right 4px
                line-height 21px
                
                &.single
                    width: 160px
                
            .value
                float: left
                    
                .timePicker
                    border 1px solid #EBEBEB
                    border-radius 3px
                    
                    height 20px
                    width 40px
                    
                    span
                        display: block
                        float: left
                        height 20px
                        line-height 20px
                        margin: 0
                        color: #000
                        font-size 12px
                        line-height 20px
                    
                    input
                        display: block
                        float: left
                        background: none
                        border none
                        color #000
                        width 18px
                        padding: 0 2px
                
                .bl-checkbox
                    margin-left: 3px 
                input
                    font-size 12px
                    line-height 13px
                    border 1px solid #EBEBEB
                    border-radius 3px
                    height 20px
                    padding: 0 4px
                    width 179px
                    
                    &.short
                        width 40px
                    
                .mini
                    float: left
                    margin-right: 4px
                    width 40px
                    text-align: center
                    
                .red
                    color #f00
                .green
                    color #0f0
                .blue
                    color #00f
                .demo
                    float: left
                    width 18px
                    height 18px
                    margin-top 1px
                    
            textarea
                width 179px
                height 45px
                
                float: left

                padding: 2px 4px
                
                font-size 12px
                line-height 13px
                
                border 1px solid #EBEBEB
                border-radius 3px
                
                resize none
                
                &.tall
                    height 200px
        
        .settingsColumn
            float: left
            width 190px
            margin 20px 0 0 20px
            
            .dropSetting
                margin: 10px 0
                float: none
                overflow: hidden

        .dropSetting
            float: left
            width 190px
            margin 20px 0 0 20px
            
            .remove
                background: url(/resources/images/desktop/removeCross.svg) center center no-repeat
                position: absolute
                right 5px
                top 5px
                
                width 16px
                height 16px
                
                opacity 0
                transition all 0.2s ease
                cursor pointer
            
            .title
                font-size 12px
                float: left
                margin-top 20px
                margin-left: 10px
                width 100px
                
            .dropArea
                width 80px
                height 80px
                // margin 10px
                float: left
                
                &:hover
                    .remove
                        opacity 1
                
                .itemPreview
                    .name
                        font-size 10px
                        line-height 11px
                        padding 4px 2px
                        
                .value
                    width 100%
                    height 100%
                
                .helper
                    position absolute
                    top 0
                    bottom 0
                    left 0
                    right 0
                    border 1px solid #EBEBEB
                    font-size 11px
                    line-height 15px
                    text-align: center
                    padding-top 15px

