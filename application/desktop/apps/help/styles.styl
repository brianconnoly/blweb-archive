.appContainer.help
    
    background: #f2f2f2
    
    .body
        box-shadow none
        border-top 1px solid #ccc
        
        .helpLeft
            position: absolute
            top 0
            bottom 0
            left 0
            width 205px
            
            overflow-y: auto
            border-right 1px solid #cccccc
            
            .section
                
                &.active, &:hover
                    
                    .sectionHead
                        color #75A843

                .sectionHead
                    height 34px
                    cursor: pointer
                    
                    .expander
                        height 34px
                        width 24px
                        
                        float: left

                        background: url(/resources/images/desktop/white/divider.svg) center center no-repeat
                        cursor: pointer
                        
                        transition all 0.2s ease
                        cursor: pointer
                        
                        &.expanded
                            transform rotateZ(90deg) !important
                        
                    .icon
                        width 16px
                        height 34px
                        float: left
                        cursor: pointer
                        
                        img
                            width 30px
                            height 30px
                            margin-left -7px
                            margin-top: 2px
                    
                    .title
                        height 34px
                        line-height 34px
                        
                        font-size 12px
                        padding-left: 10px
                        
                        cursor: pointer
                        float: left
                        
                .sectionPages
                    width 100%
                    overflow: hidden
                    transition height 0.2s ease
                    
                    .pageHead
                        height 34px
                        line-height 34px
                        font-size 12px
                        padding-left 60px
                        cursor: pointer
                        
                        &:hover
                            color #75A843

                        &.active
                            background: #e1e1e1
                            color #000 !important
                            cursor default

        .helpRight
            position: absolute
            top 0
            bottom 0
            left 206px
            right 0
            
            overflow-y: auto
            border-left 1px solid #e6e6e6
            
            &.compact
                .center
                    width 100%
                    margin-left 0
                    left 0
                    
                .helpFile
                    width 100%
                    // margin-left -15%
                    
            .center
                position absolute
                width 690px
                left 50%
                margin-left: -345px
                overflow-y: auto
                overflow-x: hidden
            
            .helpFile
                position: relative
                display: block
                width 690px
                
                // opacity 0
                transition opacity 0.2s ease
                margin: 0 auto
                pointer-events none
                
