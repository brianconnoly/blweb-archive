height 110px
width 100%
color: #000;
box-sizing: border-box;

.novaScrollerPage &
    height 140px
    margin-top -1px
    border-top: 1px solid #ccc;

.timeBox
    position absolute
    width 60px
    text-align center
    left 0
    top 10px
    color #464545

    div.arrow
        width 5px
        height 5px
        border-top 1px solid #464545
        border-right 1px solid #464545
        cursor pointer
        margin 5px 0
        margin-left 26px

        &.arrowUp
            transform rotate(-45deg)
        &.arrowDown
            transform rotate(135deg)

    div
        width 100%

    .monthLine, .weekCaption
        font-size 8px
        height 8px
        line-height 8px
        text-transform uppercase

        &.big
            font-size 11px
            height 12px
            line-height 12px
            font-weight bolder

    .dayLine
        font-size 24px
        height 24px
        line-height 26px

    .weekDayLine
        font-size 12px
        height 12px
        line-height 12px

    .yearLine
        font-size 14px
        line-height 16px
        height 16px

    .weekRange
        font-size 10px
        height 10px
        line-height 10px
        text-transform uppercase

.graph
    position absolute
    bottom 5px
    right 20px
    width 240px
    height 90px

    canvas
        width 240px
        height 90px
