<div class="previewContainer single"><div item="item" overlay="lotPostPreview" class="itemPreview"></div></div><div class="detailsContainer"><div ng-click="triggerFavourite()" ng-class="{'active':isFavourite(item.id)}" class="makeFavourite flushMousedown">&#9733;</div><h3 class="title">{{item.title}} &#160;</h3><div class="detail image_author"><div class="value">Buzzlike</div></div><div class="detail image_date"><div class="bind value"><div class="word">{{localization.translate('from')}}</div><div class="time"></div></div><div class="bind value"><div class="word">{{localization.translate('till')}}</div><div class="time"></div></div></div><div class="detail image_users"><div class="value">{{(item.minSubscribers | formatNumber) || 0}}</div><div class="value">{{(item.price | formatNumber) || 0}}</div></div></div>