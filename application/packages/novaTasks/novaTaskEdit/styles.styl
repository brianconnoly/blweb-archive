width 100%
padding-bottom 5px
background #fff

.taskActions
    float right
    margin-right 10px
    z-index 1
    padding-bottom 10px

.novaTaskStatus
    margin-right 5px
    float right

.addTask
    cursor pointer
    float right
    width 30px
    height 30px
    text-align center
    line-height 30px
    font-size 25px

    transform rotateZ(0deg)
    transition transform 0.2s ease

    z-index 2

    &.active
        transform rotateZ(45deg)

.taskTitle, .taskDescription
    width 100%
    box-sizing border-box
    padding 3px 10px

    font-size 14px
    line-height 17px
    outline none

    &.placeholder
        color #999

.taskTitle
    // margin-top 5px
    font-weight bolder
    font-size 16px

    margin-top: 4px;
    line-height: 20px;

.taskStream
    margin-top 5px
    padding 0 15px
    overflow hidden

.taskMode
    overflow hidden
    padding 10px 10px 0 10px
    margin-top -5px
    .novaSwitch
        cursor pointer
        font-size 12px
        color #ccc
        float left

        transition color 0.2s ease

        &:hover
            color #999

.taskEntities
    // padding 5px
    margin-top -10px
    padding 10px 10px
    overflow hidden
    .novaItem
        float left
        margin 5px
        width 89px //80px
        height 67px //60px
        transform translate3d(0,0,0)
        border-radius 5px
        overflow hidden
        box-shadow 0 0 2px 0 rgba(0,0,0,0.2)

.childTasks
    padding 7px 15px
    margin-top -2px
    overflow hidden

    .childTask
        overflow hidden
        min-height 30px
        display: table;

        &.addSubTask
            min-height 16px
            cursor pointer

            div
                cursor pointer

            .childTaskMark
                border none
                width 16px
                height 16px
                text-align center
                line-height 16px
                font-size 14px

        .childTaskMark
            width 28px
            height 28px
            border-radius 15px
            border 1px solid #454545
            float left
            margin 2px
            margin-right 6px

        .childTaskName
            line-height 20px
            font-size 14px
            line-height 15px

            min-width: 200px

            display: table-cell;
            vertical-align: middle;
            outline: none;

            overflow: hidden

            &.placeholder
                color #999

.taskUsers
    padding 9px
    overflow hidden

    .subHeader
        overflow hidden
        font-size 12px
        color #ccc
        clear both
        margin-left 2px

    .backFace
        display none

    .novaItem
        float left
        margin 5px
        border-radius 40px

        .novaUserPreview
            display: table;
            width: 140px;

        &.executor
            .overlay
                border 1px solid #3496f2

        .avatarWrapper
            margin 5px
            opacity 1
            transition opacity 0.2s ease

            width 30px
            height 30px

        .userName
            width 100%
            // margin-bottom 10px

            display: table-cell;
            vertical-align: middle;
            text-align: left;

.doCreate
    width 100%
    height 40px
    line-height 40px
    text-align center
    font-size 16px
    color #fff
    cursor pointer
    background #666
    opacity 0.5

    transition opacity 0.2s ease

    &.active
        background #3496F2
        opacity 0.9

        &:hover
            opacity 1
