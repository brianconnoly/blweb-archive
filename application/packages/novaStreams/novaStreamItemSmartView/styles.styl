.smartDate
    text-align center
    font-size 12px
    color #bbb
    margin 15px 0 12px 0

.messageTime
    position absolute
    right 10px
    top 20px
    font-size 9px
    color #444

.userMessage
    overflow hidden
    margin-bottom 5px

    .userPicSide
        float left
        width 35px
        min-height 35px

        .novaItem
            width 25px
            height 25px

            position absolute
            top 10px
            right 0px

    .messageSide
        float left
        max-width 70%

        .userName
            font-size 10px
            font-weight 500
            color #444
            margin: 11px 0 0 15px;

        .message
            background #EFEFEF
            padding 5px 10px
            border-radius 5px
            margin: 2px 0 0 11px

            font-size 11px
            line-height 13px
            font-weight 400

            white-space pre-line

            .messagePart
                padding-bottom 2px
                margin-bottom 2px
                border-bottom 1px solid rgba(255,255,255,0.2)

                &:last-child
                    border-bottom none
                    margin-bottom 0
                    padding-bottom 0

                .messageAttachments
                    overflow hidden

                    .novaItem
                        float left
                        width 110px
                        height 83px
                        margin 5px
                        border-radius 5px
                        overflow hidden
                        transform translate3d(0,0,0)
.systemMessage
    text-align center
    padding 10px 35px
    line-height 13px

    span
        font-size 10px
        font-weight 400

    .messageTime
        top 10px

    .userName
        margin-right 3px
