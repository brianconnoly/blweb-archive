.entities
    padding 5px 10px
    overflow hidden
    text-align left

    &.center
        text-align center

    .streamEntity
        width 80px
        height 60px
        margin 10px
        // float left
        display inline-block
        text-align left
        box-shadow 0 0 5px 0 rgba(0,0,0,0.4)
        border-radius 5px
        overflow hidden
        transform translate3d(0,0,0)

    .streamUserEntity
        // width 80px
        // height 60px
        margin 5px
        // float left
        display inline-block
        text-align left
        // box-shadow 0 0 5px 0 rgba(0,0,0,0.4)
