<div class="dragHandler topBar black noSettings"><process-bar></process-bar><div class="appControls"></div><input ng-model="pollEdit.name" translate="" translate-placeholder="'pollEditApp_enterPollName'" ng-change="savePoll()" ng-model-options="{ updateOn: 'default blur', debounce: {'default': 500, 'blur': 0} }" class="title"/></div><div class="body dragHandler"><div ng-model="pollEdit.value" disabled="poll.locked" ng-change="savePoll()" ng-model-options="{ updateOn: 'default blur', debounce: {'default': 500, 'blur': 0} }" placeholder-text="'pollEditApp_enterQuestion'" class="editableDiv pollValue"></div><div ng-if="hasDifferentSchedules()" class="schedules"><div ng-class="{'active':currentSchedule==null}" ng-click="pickSchedule(null)" class="schedule total"><div translate="'pollEditApp_totalResults'" class="caption"></div><div>{{poll.lastStats.total | formatNumber}}</div></div><div ng-repeat="(id,schedResult) in poll.lastStats.schedResults" ng-class="{'active':currentSchedule==id}" ng-click="pickSchedule(id)" class="schedule pollSchedulePreview"><img ng-src="{{community.photo}}" class="picPreload"/><div class="overlay"><div class="timeDate"> <span class="time">{{::time}}</span><br/><span class="date">{{::date}}</span></div></div><div class="total">{{schedResult.total | formatNumber}}</div></div></div><div ng-class="{'results':poll.lastStats.total &gt; 0}" class="answers"><div ng-repeat="answer in pollEdit.answers track by $index" class="answer"><div ng-style="{background:colors[$index]}" ng-if="poll.lastStats.total &gt; 0" ng-class="{'hidden':hiddenAnswer[$index]}" ng-click="triggerAnswer($index,$event)" class="dot"></div><div ng-if="!(poll.lastStats.total &gt; 0)" class="dot"></div><div ng-model="pollEdit.answers[$index]" disabled="poll.locked" ng-change="savePoll()" ng-model-options="{ updateOn: 'default blur', debounce: {'default': 500, 'blur': 0} }" class="value editableDiv"></div><div ng-click="removeAnswer(answer)" ng-if="!poll.locked" class="remove"></div><div ng-if="poll.lastStats.total &gt; 0" class="totalPercent"> <span>{{getRate($index)}} </span><span ng-if="hasVotes($index)">({{getVotes($index)}})</span></div><div ng-if="poll.lastStats.answers[$index] &gt; 0" ng-style="{background:colors[$index], width:getWidth($index)}" ng-class="{'hidden':hiddenAnswer[$index]}" class="totalBar"></div></div><div ng-if="!poll.locked" class="answer new"><div class="dot"></div><div ng-model="$parent.newAnswer" ng-keydown="newAnswerKey($event)" placeholder-text="'pollEditApp_enterAnswer'" class="value editableDiv"></div><div translate="'pollEditApp_doAddAnswer'" ng-click="addAnswer()" ng-if="$parent.newAnswer.length &gt; 0" class="button"></div></div></div><div ng-if="poll.lastStats.total &gt; 0" class="pollGraph"><canvas width="400" height="230"></canvas><div class="values"></div><div class="helper"></div></div></div><div class="anonymous"><checkbox ng-model="pollEdit.anonymous" ng-change="savePoll()" ng-if="!poll.locked" class="long"></checkbox><span translate="'pollEditApp_anonymousPoll'" ng-if="!poll.locked || poll.anonymous"></span></div>