h2.title.headlining.sideMargin
    span(ng-click="select(widget)") 
        span {{localization.translate(widget.title)}}
        div.communityTitle(ng-if="widget.communityId", community-id="widget.communityId")
        div.teamTitle(ng-if="widget.teamId", team-id="widget.teamId")
            
div.content.sideMargin(ng-style="{'width':widgetWidth}", ng-class="{'small_view':params.smallIcons}")
    div.arrow.right(ng-click="goRight()", ng-hide="noRight")
    div.arrow.left(ng-click="goLeft()", ng-hide="noLeft")
    div(style="margin: 0 40px")
        ul.list(ng-repeat="page in pages", ng-show="page==currentPage", ng-style="{'height':widgetHeight, 'width':contentWidth}")
            li.item.contextMenu.selectableItem.editableItem.droppableItem(ng-repeat="item in page")
                div.itemPreview(item="item", overlay="catalog")

    div.pagination
        div.center
