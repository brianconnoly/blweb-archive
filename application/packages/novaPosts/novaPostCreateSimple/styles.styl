background #fff

.novaPostEditor
    overflow-y auto
    height auto
    max-height 100%

.postDestination
    overflow hidden

    .destinationParameters
        float right
        margin 20px
        text-align right

        .picker
            line-height 20px

    .projectPreview
        float left
        width 50px
        height 50px
        margin 20px
        margin-bottom 5px

        background #D4D4D4

        border-radius 3px
        transform translate3d(0,0,0)
        box-shadow 0 0 2px rgba(0,0,0,0.4)
        overflow hidden

        .name
            display none

.novaTimelineCalendar
    height 180px

.novaTimelineMenu
    .novaScreenPicker
        float right
        margin-right 20px
        line-height 50px

.calendarContainer
    height 0
    overflow hidden
    transition height 0.2s ease

.withCalendar
    .calendarContainer
        height 180px

.postTimeBar
    font-size 14px
    padding 0 13px

    .hourRate
        float right

    .currentDate
        .timePicker
            margin-right 5px
            input
                font-size 14px
                width 18px
                text-align center
                line-height 15px
                height 15px
                padding 0
            .date
                cursor pointer

.themePickerBar
    padding 0 13px
    padding-top 2px
    font-size 14px
    overflow hidden
    height 16px

    .themePicker
        float right
        z-index 2

    .newThemeName
        font-size 14px
        &:after
            color rgba(0,0,0,0.5)

    .pickedTheme
        .remove
            float left
            transform rotate(45deg)
            font-size 16px
            line-height 15px
            text-align center
            cursor pointer
            margin-right 5px
        .novaItem
            float left

.postControls
    font-size 14px
    padding 10px 13px
    // padding-top 10px

    .postPicker
        float right
        z-index 2

    .postSwitch
        opacity 0.5
        cursor pointer

        &.active
            opacity 1
            cursor default

.postHelper
    font-size 14px

    .novaPostContent
        height 240px
        width 100%

    .newPostText
        padding 0 13px
        min-height 40px
        padding-bottom 10px

        &:after
            // width 80%
            padding 6px 17px
            width 260px
            // text-align center
            font-size 12px
            line-height 16px
            color #ABABAB
            position absolute

.addMenu
    overflow hidden
    padding 10px 13px
    font-size 14px

    div
        float right

    .addItems
        height 27px
        width 27px
        line-height 27px
        text-align center
        font-size 25px
        opacity 0.6
        cursor pointer
        transform scale(1)
        transition all 0.2s ease

        &:active
            transform scale(0.9)

        &:hover
            opacity 1

    .addItemsDoubler
        margin 0 5px
        margin-right 0
        cursor pointer
        line-height 27px
        height 27px

    .addItemsShortcut
        height 15px
        line-height 15px
        padding 0 5px
        border 1px solid #554545
        border-radius 3px
        margin 5px
        cursor pointer

.spacer
    width 100%
    height 40px

.actions
    position absolute
    bottom 0
    right 0
    left 0
    height 40px
    z-index 2

    .action
        width 50%
        height 40px
        float left
        text-align center
        line-height 40px
        font-size 14px
        background #F2F2F2
        color #4D4D4D

        cursor pointer
        // opacity 0.8
        // transition opacity 0.2s ease

        &:hover
            opacity 1

        &.blue
            background #3FA9F5
            color #FFFFFF

        &.inactive
            background #D6D6D6 !important
            cursor default !important
