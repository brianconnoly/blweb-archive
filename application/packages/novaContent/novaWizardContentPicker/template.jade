div.breadCrombs
    div.cromb(
        ng-repeat="cromb in crombs",
        ng-class="{'current':currentCromb == cromb}",
        ng-click="goCromb(cromb)") 
        div.novaItem.novaItemPreview(
            ng-if="cromb.cover",
            nova-item-object="cromb.cover",
            nova-item-preview-type="simple")
        span.name {{cromb.name}}

div.loaderShield(ng-if="isLoading")
    div.novaLoader
    
div.itemsContainer
    div.pickerItem.novaItem(
        ng-repeat="item in items", 
        ng-dblclick="activateItem(item)")
            div.novaItemPreview()
            div.itemPicker(
                ng-click="wizard.pick(item)", 
                ng-class="{'active':wizard.isPicked(item)}")

