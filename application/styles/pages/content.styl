li.item
    float: left
    display: block
    position: relative

    width 150px
    height 150px

    cursor: pointer

    margin 12px

    .small_view &
        width 100px
        height 100px
        margin 8px

        position: relative

        .locked
            sprite "/resources/images/icons/locks/lock-S.png" center center 23px 34px

        .itemPreview
            &.audio
                .track-name
                    top 20px
                    font-size 12px

                    p
                        max-height: 36px;

                    .audioHead
                        margin-bottom 3px

                &.mini
                    .track-name
                        left 2px
                        right 2px

            &.text
                .text-preview
                    padding 11px 8px 8px 8px
                    font-size 12px

                &.mini
                    div.text-preview
                        font-size 10px
                        padding 2px 5px 5px 5px

        &:hover
            .remove-circle-button
                display: block

            .schedule-info
                bottom -100%

    &.absoluteContent
        transition all 0.2s ease
        position: absolute

    img
        user-select none
        pointer-events none

    div.content-name
        position: absolute
        left 10px
        bottom -29px

        font-family: Helvetica
        font-weight: bold

        color: rgba(247, 233, 141,0.9)
        text-shadow 0 0 20px rgba(0,0,0,1)

    body > &
        width 50px
        height 50px

body > .feedItem
    margin 20px
    width 50px !important
    height 50px !important

    .addPostArea
        display: none

body > .teamMember, body > .teamItem
    margin 20px
    width 100px !important
    height 100px !important
    
body > .previewContainer
    margin 20px
    width 70px !important
    height 50px !important
    background: #fff

.screen.deepview
    //position absolute
    //left 0px   //300
    //right 0px //300

    div.left-arrow, div.right-arrow
        position absolute
        padding-top: 22px
        top 42px
        bottom 0px

        width 35px

        z-index 5
        background-color rgba(255, 255, 255, 0.4)
        transition all ease 0.2s

            .turbo &
                background-color: #A2C5DA

        .touch &
            display none

        &:hover
            cursor pointer


    div.left-arrow
        left 0px
        // sprite "../resources/images/icons/timeline-buttons.png" 10px center 50px 50px
        background: url(/resources/images/desktop/timeline/leftArrow.svg) center center no-repeat

    div.right-arrow
        right 0px
        // sprite "../resources/images/icons/timeline-buttons.png" -24px center 50px 50px
        background: url(/resources/images/desktop/timeline/rightArrow1.svg) center center no-repeat
        transition all ease 0.2s

        .showRight &
            right 200px


    .contentDeepView
        position absolute
        top 44px
        bottom 0px
        left 0px
        right 0px
        overflow hidden
        //padding 0 35px

        &.transition ul.section
            transition all ease 0.2s

        ul.section
            width 175px
            display block
            position absolute
            top 0

            li
                float left
                position relative
                background rgba(255, 255, 255, 0.3)



