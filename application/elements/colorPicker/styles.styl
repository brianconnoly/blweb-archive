.buzzColorPicker
    border 1px solid #e6e6e6
    border-radius 3px
    height 20px
    width 40px
    
    box-sizing border-box
    
    .activator
        position: absolute
        
        right 2px
        top 2px
        
        width 14px
        height 14px
        border-radius 10px
        
        transition background-color 0.2s ease
        
        background: url(/resources/images/desktop/black/selector.svg) center center no-repeat
        background-size 6px 3px
        background-color: rgba(51,51,51,0.6)

        &:hover
            cursor: pointer
            background-color: rgba(51,51,51,0.8)