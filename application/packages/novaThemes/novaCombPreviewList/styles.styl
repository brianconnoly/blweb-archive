width 100%
overflow hidden
padding 10px 0

.cover
    width 50px
    height 50px
    margin 0 20px
    float left

    background #D4D4D4

    border-radius 3px
    transform translate3d(0,0,0)
    overflow hidden
    box-shadow 0 0 2px rgba(0,0,0,0.4)

    .userPic
        border-radius 0

.parameters
    position absolute
    top 10px
    right 20px
    left 80px
    bottom 10px

    .parameter
        overflow hidden
        font-size 14px
        line-height 15px
        color #000

        .value
            float right
