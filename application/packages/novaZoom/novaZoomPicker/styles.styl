position: absolute
z-index 1000

top 0
bottom 0
left 0
right 0

opacity:0
pointer-events none
transition all 0.2s ease

&.active
    opacity 1
    pointer-events auto

.pickerWindow
    position: absolute
    height 100px
    width 30px
    border-radius 5px
    background: #ccc
    
.pickerHandler
    position: absolute
    left 5px
    width 20px
    height 20px
    border-radius 10px
    background: #aaa
    cursor: pointer