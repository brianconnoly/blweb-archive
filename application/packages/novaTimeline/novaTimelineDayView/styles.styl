height 141px
width 100%
// background: rgba(0,0,0,0.8)
// color: #fff
border-bottom 1px solid #ccc
background: rgba(255,255,255,0.97);
color: #000;
box-sizing: border-box;
// position absolute

.novaScrollerPage &
    height 140px
    margin-top -1px
    border-top: 1px solid #ccc;

.timeBox
    position absolute
    width 60px
    text-align center
    left 0
    top 18px

    div
        width 100%

    .monthLine, .weekCaption
        font-size 8px
        height 8px
        line-height 8px
        text-transform uppercase

        &.big
            font-size 11px
            height 12px
            line-height 12px
            font-weight bolder

    .dayLine
        font-size 20px
        height 24px
        line-height 24px

    .weekDayLine
        font-size 12px
        height 12px
        line-height 12px

    .yearLine
        font-size 14px
        line-height 16px
        height 16px

    .weekRange
        font-size 10px
        height 10px
        line-height 10px
        text-transform uppercase

.statsBox
    position absolute
    right 20px
    top 20px
    font-size 13px

    span
        text-align right

    .total
        width 55px
        display inline-block

.newPostActivator
    position absolute
    left 20px
    bottom 40px
    font-size 37px
    font-weight 200
    height 20px
    width 20px
    text-align center
    line-height 20px
    cursor pointer

.graph
    position absolute
    bottom 5px
    right 20px
    width 240px
    height 90px

    canvas
        width 240px
        height 90px

.debug, .debug2
    position absolute
    bottom 5px
    right 5px
    width 20px
    height 20px
    background #ccc
    cursor pointer

.debug2
    right 30px
