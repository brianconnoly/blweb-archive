.noLeftPanel &
    margin: 0

.overviewBar
    width 100%
    display table
    margin-bottom 15px
    .overviewCover
        width 50px
        height 50px
        border 1px solid
        border-radius 5px
        box-sizing border-box
        transition all 0.2s ease
        overflow: hidden
        transform translate3d(0,0,0)
        margin-left 18px

        float left

        .noLeftPanel &
            border-radius 0
            margin: 0
            border 1px solid
            margin-left 0

            .itemPreview
                border-radius 0

    .overviewText
        padding-left 10px
        display table-cell
        vertical-align middle
        width 100%

        .lightTitle
            color #8C8C8C
            font-size 12px
        .mainTitle
            font-size 14px
            margin 2px 0
            color #000

        .activity
            font-size 12px
            color #4E4E4E
