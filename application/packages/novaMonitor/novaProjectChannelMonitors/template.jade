div.title(
    translate="'novaProjectChannelMonitors_canvas'", 
    ng-click="openCanvas()",
    ng-class="{'active':flow.currentCode=='novaSocialCanvas'}")
div.title(translate="moduleName", ng-click="activateAll()")
div.subItem(
    ng-repeat="channel in channels | filter:channelFilter", 
    ng-click="activateChannel(channel)",
    ng-class="{'active':channelActive(channel)}")
    div.settings(ng-click="channelSettings(channel, $event)")
    div.subTitle {{channel.name}}
