overflow hidden
padding-top 40px

.pickerItem
    .novaItemPreview
        pointer-events none

.itemPicker
    position absolute
    bottom 6px
    right 6px
    border-radius 20px
    height 14px
    width 14px
    border 1px solid #3496f2
    background #fff

    cursor pointer

    &.active
        &:after
            position absolute
            content: ""
            top 1px
            left 1px
            background #3496f2
            width 12px
            height 12px
            border-radius 10px

.breadCrombs
    position fixed
    top 90px
    left 0
    right 0
    height 40px
    z-index 2
    background rgba(255,255,255,0.9)
    border none

    white-space: nowrap;
    overflow hidden

    .cromb
        display inline-block
        white-space: normal;
        float none
        margin-right 30px
        line-height 40px
        height 40px
        cursor pointer

        &.current
            cursor default

        .novaItem, .name
            pointer-events none

        .novaItem
            float left
            width 30px
            height 30px
            margin 4px
            margin-right 10px
            border-radius 5px
            border 1px solid #eee
            overflow hidden
            transform translate3d(0,0,0)

        &:after
            content: ""
            position absolute
            top 14px
            right -20px

            width 10px
            height 10px

            border-top 1px solid #eee
            border-right 1px solid #eee

            transform rotate(45deg)

            font-size 30px
            color #eee

        &:last-child
            &:after
                display none

.loaderShield
    position fixed
    top 0
    bottom 0
    left 0
    right 0

    z-index 2
    background rgba(255,255,255,0.4)

    .novaLoader
        position absolute

        left 50%
        top 50%

        margin-top -20px
        margin-left -10px
