        &.success.repost
            background #3e606b
            .info
                .name
                    .gradient
                        background: linear-gradient(to right, rgba(255,255,255,0) 50%,rgba(62,96,107,1) 100%);

                        .turbo &
                            background: rgb(62,96,107)

        &.error
            rgba(222, 47, 47, 0.9)
            .info
                .name
                    .gradient
                        background: linear-gradient(to right, rgba(255,255,255,0) 50%,rgba(224,17,61,1) 100%);

                        .turbo &
                            background: rgb(224,17,61)

        &.error.repost
            background #d96e65
            .info
                .name
                    .gradient
                        background: linear-gradient(to right, rgba(255,255,255,0) 50%,rgba(217,110,101,1) 100%);

                        .turbo &
                            background: rgb(217,110,101)

