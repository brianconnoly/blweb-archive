position absolute
top 0
bottom 0
right -100px
width 100px

background rgba(0,0,0,0.7)
z-index 900

opacity 0

transition all 0.2s ease

&.noAnim
    transition none

&.showed
    opacity 1

.tabBar
    position absolute
    top 0
    left 0
    right 0
    height 30px
    background rgba(0,0,0,0.6)

    .novaBufferTab
        float: left;
        width: 20px;
        height: 100%
        text-align: center;
        line-height: 28px;
        cursor: pointer;

        &.active
            cursor: default;
            .closePocket
                display: inline-block;
                cursor: pointer;

        .closePocket
            display: none;
            color: #fff
            cursor: pointer;

        &:nth-child(1)
            background #008e37
        &:nth-child(2)
            background #eaa830
        &:nth-child(3)
            background #006fa3
        &:nth-child(4)
            background #c061f2
        &:nth-child(5)
            background #a32900

    .addPocket
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        width: 30px;

        text-align: center;
        line-height: 28px;
        transition right 0.2s ease
        cursor: pointer;
        color: #fff;

        &.hidden
            right: -30px;

.tabContents
    position absolute
    top 30px
    left 0
    right 0
    bottom 0

    padding: 4px 5px

    padding-bottom: 50px !important;
    overflow-y: auto;

    .novaItem
        width 80px
        height 60px

        position: relative;
        float: left;
        overflow hidden
        border-radius 5px
        box-sizing: border-box;

        transform translate3d(0,0,0)

        margin: 4px 5px

    .bufferItem
        float: left;

        &:hover .removeElement
            opacity: 1;

    .removeElement
        background: url(/resources/images/nova/removeCross.svg) center center no-repeat
        position: absolute
        left 5px
        top 5px

        width 16px
        height 16px

        cursor: pointer
        opacity 0
        transition opacity 0.2s ease
