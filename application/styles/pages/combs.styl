            float right
            margin-right 10px
            top 4px

            div
                float left

                .bl-checkbox
                    position relative
                    margin-right 7px
                    top 4px
                    border 2px #fff solid

                    .tumbler
                        background #fff

                span
                    position relative
                    top 6px
                    color #fff

            .second
                margin-left 42px
            .none
                display none

    .categories
        text-align center

    .category
        display inline-block
        text-align left
        width 340px

        &.categorypost_text
            width 100%

    .textSeparator
        size 'abs' auto 40px 0 40px
        height 1px
        background #999

    li.item
        margin 5px
        width 75px
        height 75px
        background #6EA155

        &.contentType_text
            width 100%
            height auto
            float none
            margin 10px 0 0 0
            display inline-block
            overflow hidden
            background none

            .deleted-mark
                height 35px

            .itemPreview
                position relative
                background none

            .text-preview
                position relative
                display inline-block
                max-height 80px
                max-width 300px
                padding 0 0 0 40px
                margin 0 20px 10px 0
                background none
                font-size 11px
                line-height 20px

            .text-footer
                display none

            .textCounter
                display block
                size 'abs' 28px auto 0 0
                width 40px
                height auto
                font-size 10px
                text-align center
                color #999

            .removeBox
                position absolute
                top 3px
                left 12px
                width 16px
                height 16px
                background-size 16px
                box-shadow none
                sprite "/resources/images/icons/closers/big-black-noPadding.png"
                opacity 0.35

                &:hover
                    opacity 0.7


