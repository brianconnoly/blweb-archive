div.touchHelper
    display: none
    position: fixed

    bottom 0
    left 0
    right 0

    height 40px

    background #fff
    border-top: 1px solid #ccc

    &.big
        height: 80px

        .button
            line-height: 75px
            font-size: 30px

            &.right
                margin-right: 35px
            &.left
                margin-left: 35px

    &.active
        display: block

    .button
        float left
        color #1664F9
        line-height: 38px
        margin-left 15px

        &.right
            float right
            margin-left 0
            margin-right 15px

        &.disabled
            color #ccc

        &.active
            color #F72125