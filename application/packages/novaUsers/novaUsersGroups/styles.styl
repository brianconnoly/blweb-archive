.novaFrameTopBar

    .groupSwitch
        position absolute
        top 0
        left 0
        height 30px
        width 30px

    .filterBox
        position absolute
        top 0
        right 40px
        bottom 0
        left 30px

        input
            width 100%
            height 100%
            padding 0 10px
            font-size 14px

            set-placeholder-style color #494949

    .searchPeople
        cursor pointer
        float right
        width 30px
        height 30px
        text-align center
        line-height 30px
        font-size 25px
        z-index 2

        transform rotateZ(0deg)
        transition all 0.2s ease

        opacity: 0
        pointer-events none

        &.visible
            opacity 1
            pointer-events auto

        &.active
            transform rotateZ(45deg)

    .inviteMembers
        float: right;
        margin-top 3px
        margin-right: -100%;
        transition: all 0.2s ease;

        &.active
            margin-right 5px

&.novaFrameTopBarLayout
    .novaFrameContents
        overflow-y auto

.memberGroup
    overflow hidden

    .groupHead
        clear both
        width 100%
        // background: rgba(0,0,0,0.2)
        border-bottom: 1px solid rgba(0,0,0,0.3)
        color: #454545
        height 28px
        padding-left: 10px
        font-weight: bolder
        line-height 28px
        margin-bottom: 1px;
        .cap
            text-transform capitalize

.groupMembers
    padding 10px
    overflow hidden
    .userItem
        float left
        margin 10px
        border-radius 10px

        &.invited
            &:after
                content: 'Приглашен'
                position absolute
                top 10px
                bottom 0
                left 0
                right 0
                color #3496F2
                // z-index 1
                font-size 11px
                text-align center
                line-height 64px

                text-shadow: -1px -1px 0 #FFF, 1px -1px 0 #FFF, -1px 1px 0 #FFF, 1px 1px 0 #FFF;
                font-weight: 500;
                pointer-events none

            .avatarWrapper
                opacity 0.5


        .avatarWrapper
            margin 10px 20px
            opacity 1
            transition opacity 0.2s ease

        .userName
            width 100%
            margin-bottom 10px
