div.header
    margin-top 0px

div.addPanel
    position: absolute
    top 0px
    bottom 0
    width 250px

    z-index 20000

    background rgba(0, 0, 0, 0.20)
    color white
    transition all 0.3s ease
    overflow: auto

    .turbo &
        background: #111

    .overlay &
        top 40px

    .add-button
        margin 6px
        float right
    .remove-button
        margin 10px 45px 0 0
        float right

    ul.options
        display: block
        width 100%
        position: relative
        overflow hidden


        li.option
            line-height 40px
            height 40px
            padding 0 15px

            font-size 20px

            .wrap
                margin-left 36px
                overflow: hidden
                width 100%
                height 100%
                font-size 11px
                border-bottom 1px solid white

                span.descr
                    font-size 15px
                    line-height 34px

            *:hover
                cursor pointer
            &:hover
                background rgba(255, 255, 255, 0.3)
                transition all ease 0.3

        li.option.cur
            background rgba(255, 255, 255, 0.3)


        li.network-type
            height 30px
            background rgba(0,0,0,0.25)
            font-family "HelveticaNeue", "Helvetica"

            span.descr
                font-size 19px
                line-height 30px


            .icon
                width 22px
                height 22px
                border-radius 3px
                float left
                margin 4px 6px

                .name
                    margin 4px 3px
                    font-size: 13px;
                    text-transform: uppercase;

        li.videoImporter
            display block
            height 40px
            background: rgba(255,255,255,0.2)
            overflow: hidden

            &.expanded
                height: auto

            div.head
                display: block
                height 40px

                span.type
                    height 40px
                    width 40px

                    margin-right 10px

                    display: block
                    float: left

                    text-align: center
                    line-height 40px
                    font-size: 25px

                    background: rgba(255,255,255,0.2)

                span.name
                    height 40px
                    line-height 40px

                    display: block
                    float: left
