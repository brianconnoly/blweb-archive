.blTable .head {
  overflow: hidden;
  padding: 3px 0;
  border-bottom: 1px solid #e6e6e6;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}
.blTable .head .cell {
  height: 20px;
  padding: 0 10px;
  border-right: 1px solid #e6e6e6;
  line-height: 20px;
  font-size: 12px;
  color: #333;
}
.blTable .head .cell:last-child {
  border-right: none;
}
.blTable .tableLine {
  width: 100%;
  height: 40px;
}
.blTable .tableLine:nth-child(2n) {
  background: #f9f9f9;
}
.blTable .cell {
  float: left;
  overflow: hidden;
  padding: 0 10px;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  height: 40px;
  line-height: 40px;
  font-size: 14px;
}
.blTable .list {
  position: absolute;
  top: 27px;
  left: 0;
  right: 0;
  bottom: 0;
  overflow-y: auto;
}
.itemActionBlock .statusBlock {
  margin-right: 5px;
  font-size: 12px;
  float: right;
}
.itemActionBlock .statusBlock:first-child {
  margin-right: 10px;
}
.itemActionBlock .actions {
  margin: 10px 5px 0 0;
  height: 18px;
  border: 1px solid #b3b3b3;
  -webkit-border-radius: 3px;
  border-radius: 3px;
  float: right;
}
.itemActionBlock .actions .action {
  padding: 0 3px;
  height: 18px;
  line-height: 18px;
  font-size: 12px;
  text-align: center;
  cursor: pointer;
  float: left;
}
.itemActionBlock .actions .menu {
  background: url("/resources/images/desktop/black/selector.svg") center center no-repeat;
  border-left: 1px solid #b3b3b3;
  float: left;
  width: 17px;
  height: 18px;
  z-index: 10;
  cursor: pointer;
}
.itemActionBlock .actions .menu:first-child {
  border: none;
  width: 16px;
}
