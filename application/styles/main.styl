.requestStatus
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    transition all ease 0.2s
    z-index 666

    $borderColor = rgba(255, 222, 47, 0.9)

    //.corner, .icon
    //    transform-origin right bottom;
    //    transform scale(0.66);

    .title
        position absolute
        left 0
        right 0
        bottom 7px
        height 25px
        font-weight: normal
        text-align: center
        color: white
        font-size: 21px

    .corner
        position absolute
        right 0
        bottom 0
        width 0
        height 0
        border-left 75px solid transparent
        border-bottom 75px solid $borderColor
    .icon
        position absolute
        right 0
        bottom 0
        width 75px
        height 75px
        sprite "/resources/images/icons/requestStatus/adcorner.png" 75px 0 225px 75px

        &.invisible
            display none

    &:hover
        opacity 0

    &.accepted, &.inProgress
        .icon
            background-position 0 0

    &.rejected
        &:hover
            opacity 1!important
        .icon
            background-position -75px 0
        .corner
            border-bottom-color rgba(222, 47, 47, 0.9)
            cursor pointer

    &.created
        .icon
            background-position -150px 0

    &.completed
        .icon
            border 0
            top 0
            left 0
            width 100%
            height 100%
            sprite "/resources/images/icons/requestStatus/accepted.png"
            background-color $borderColor
        .corner
            display none

    &.error
        background #008000

    .smallRequest &
        .corner
            border-left 45px solid transparent
            border-bottom 45px solid $borderColor
        .icon
            width 50px
            height 50px
            sprite "/resources/images/icons/requestStatus/adcorner.png" 75px 0 150px 50px

        &.rejected .icon
            background-position -50px 0
        &.created .icon
            background-position -100px 0



