    .previewContainer
        overflow: hidden
        
        .name
            position: absolute
            bottom 0
            left 0
            right 0
            text-align: center
            font-size 16px
            line-height 18px
            
            background: rgba(51,51,51,0.9)
            color #fff
            
            max-height none !important
            
        .members
            position: absolute
            top 0
            left 0
            right 0
            background: rgba(51,51,51,0.9)
            color #fff
            
            font-size 12px
            line-height: 15px
            
            text-align: center
            padding: 2px
            
    .rightContent
        .name
            font-size 14px
            line-height 15px
            
