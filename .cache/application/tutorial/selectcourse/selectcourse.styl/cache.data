.selectcourse {
  position: absolute;
  background: rgba(238,238,238,0.96);
  padding: 10px 0;
}
.selectcourse .courseList {
  position: relative;
  width: 480px;
  margin: 75px auto 0 auto;
}
.selectcourse .courseList .courseTitle {
  font-size: 24px;
  font-weight: 400;
  text-align: center;
}
.selectcourse .courseList .courseClose {
  position: absolute;
  font-size: 24px;
  right: 0;
  top: 0;
  cursor: pointer;
}
.selectcourse .courseList .courseBlock {
  margin-top: 15px;
  width: 100%;
  max-height: 460px;
  background: #eeeff0;
  overflow: auto;
}
.selectcourse .courseList .courseBlock .courseCur {
  background: #fff;
}
.selectcourse .courseList .courseBlock .courseItem {
  position: relative;
  overflow: hidden;
}
.selectcourse .courseList .courseBlock .courseItem .courseRow {
  padding: 10px;
  color: #000;
  font-size: 14px;
  cursor: pointer;
  overflow: hidden;
}
.selectcourse .courseList .courseBlock .courseItem .courseRow:hover {
  background: #fff;
}
.selectcourse .courseList .courseBlock .courseItem .courseRow .status {
  position: relative;
  float: left;
  width: 16px;
  height: 11px;
  top: 4px;
  margin-right: 10px;
}
.selectcourse .courseList .courseBlock .courseItem .courseRow .notpassed {
  background-image: url("/resources/images/icons/coursenotpassed.png");
  background-position: 0px 0px;
  background-repeat: no-repeat;
  -webkit-background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  background-size: 100% 100%;
}
@media all and (-webkit-min-device-pixel-ratio: 1.5), (min--moz-device-pixel-ratio: 1.5), (-o-min-device-pixel-ratio: 1.5/1), (min-device-pixel-ratio: 1.5), (min-resolution: 138dpi), (min-resolution: 1.5dppx) {
  .selectcourse .courseList .courseBlock .courseItem .courseRow .notpassed {
    background-image: url("/resources/images/icons/coursenotpassed@2x.png");
    background-position: 0px 0px;
    background-repeat: no-repeat;
    -webkit-background-size: 100% 100%;
    -moz-background-size: 100% 100%;
    background-size: 100% 100%;
  }
}
.selectcourse .courseList .courseBlock .courseItem .courseRow .passed {
  background-image: url("/resources/images/icons/coursepassed.png");
  background-position: 0px 0px;
  background-repeat: no-repeat;
  -webkit-background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  background-size: 100% 100%;
}
@media all and (-webkit-min-device-pixel-ratio: 1.5), (min--moz-device-pixel-ratio: 1.5), (-o-min-device-pixel-ratio: 1.5/1), (min-device-pixel-ratio: 1.5), (min-resolution: 138dpi), (min-resolution: 1.5dppx) {
  .selectcourse .courseList .courseBlock .courseItem .courseRow .passed {
    background-image: url("/resources/images/icons/coursepassed@2x.png");
    background-position: 0px 0px;
    background-repeat: no-repeat;
    -webkit-background-size: 100% 100%;
    -moz-background-size: 100% 100%;
    background-size: 100% 100%;
  }
}
.selectcourse .courseList .courseBlock .courseItem .courseRow .name {
  float: left;
  font-size: 18px;
}
.selectcourse .courseList .courseBlock .courseItem .courseText {
  position: relative;
  margin-left: 36px;
  font-size: 14px;
  padding: 10px 20px 15px 0;
  line-height: 1.4em;
}
.selectcourse .courseList .courseBlock .courseItem .openCourse {
  position: relative;
  color: #5f9ec3;
  float: right;
  display: block;
  font-size: 20px;
  padding: 0 30px 10px 0;
  cursor: pointer;
}
.selectcourse .courseList .courseBlock .courseLocked .courseRow {
  cursor: default;
}
.selectcourse .courseList .courseBlock .courseLocked .courseRow:hover {
  background: none;
}
.selectcourse .courseList .courseBlock .courseLocked .courseRow .name {
  color: #999;
}
